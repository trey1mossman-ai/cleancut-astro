---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
---

<Layout
  title="Cabinet Refinishing Services | Clean Cut Painting & Handyman"
  description="Transform your kitchen cabinets, bathroom vanities, built-ins, bookcases, and entertainment centers with Clean Cut's professional cabinet refinishing services in Decatur & Springfield IL."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[500px] py-20 lg:py-24 overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Cabinet Refinishing.webp"
        alt="Professional cabinet refinishing services"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Cabinet Refinishing Services
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            A savvy and cost-effective alternative to replacement. Transform your kitchen cabinets, bathroom vanities, built-ins, bookcases, and entertainment centers.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Overview Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          What We Refinish
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From kitchens to bathrooms, we handle every cabinet surface with precision and care
        </p>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-16 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/cabinet-refinishing/copy-of-2.webp"
              alt="Kitchen cabinet refinishing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Kitchen Cabinets</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/Home Page/Residential Services/CC _ Home Page Photos_Interior Painting.webp"
              alt="Bathroom vanity refinishing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Bathroom Vanities</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/542207858_622811790903167_5174595472123875714_n.webp"
              alt="Built-in shelving and desk area refinishing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Built-In Shelving</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6822-2.webp"
              alt="Bookcase and closet door refinishing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Bookcases</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/4.webp"
              alt="Entertainment center refinishing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Entertainment Centers</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/march-26.webp"
              alt="Hardware updates and replacement"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="cabinet-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Hardware Updates</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Full-Width Visual Break -->
    <section class="relative h-96 overflow-hidden">
      <img
        src="/images/services-optimized/interior-painting/6t4a6783.webp"
        alt="Open concept living space with beautifully refinished kitchen cabinets"
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
      />
    </section>

    <!-- Feature Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/interior-painting/2.webp"
              alt="Beautiful kitchen with professionally refinished white cabinets"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond Painting: Transforming Spaces
            </h2>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              Cabinet refinishing is more than just a fresh coat of paint. It's about breathing new life into your kitchen or bathroom without the expense and disruption of full replacement.
            </p>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Our skilled craftsmen bring precision and artistry to every cabinet we touch, ensuring a flawless finish that lasts for years to come.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get Free Estimate
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-white mb-12">
          Our Cabinet Refinishing Process
        </h2>
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                1
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Protection First
              </h3>
              <p class="text-gray-600">
                Complete masking and protection of flooring, fixtures, and contents
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                2
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Hardware Expertise
              </h3>
              <p class="text-gray-600">
                Careful detachment and resetting of all hardware
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                3
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Surface Preparation
              </h3>
              <p class="text-gray-600">
                Thorough sanding and de-glossing of all surfaces
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                4
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Primer Application
              </h3>
              <p class="text-gray-600">
                Single coat of stain-blocking oil primer for superior adhesion
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                5
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Detail Work
              </h3>
              <p class="text-gray-600">
                New caulking installation and hole filling for perfect finish
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                6
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Finish Coating
              </h3>
              <p class="text-gray-600">
                Two coats of interior semi-gloss latex for lasting durability
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                7
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Quality Assurance
              </h3>
              <p class="text-gray-600">
                Final walkthrough with warranty commitment and satisfaction guarantee
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Cabinet Refinishing Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          Explore our portfolio of completed cabinet refinishing projects showcasing our attention to detail and quality craftsmanship.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/Home Page/Residential Services/CC _ Home Page Photos_Cabinet Refinishing.webp"
              alt="Featured cabinet refinishing transformation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/540103861_622811744236505_5519604479028921858_n.webp"
              alt="Professional cabinet refinishing - white and navy kitchen cabinets"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6843.webp"
              alt="Cabinet refinishing project - beautifully painted bedroom furniture"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/542207858_622811790903167_5174595472123875714_n.webp"
              alt="Clean Cut cabinet refinishing - open living space with built-in shelving"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6783.webp"
              alt="Professional cabinet painting - open concept kitchen and living area"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/Home Page/Recent Projects/CC _ Home Page Photos_Recent Work_Garage Repaint-13.webp"
              alt="Cabinet refinishing - custom wood panel and fireplace surround"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/2.webp"
              alt="Clean Cut cabinet refinishing - modern white kitchen transformation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="cabinet-gallery"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Cabinets?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your cabinet refinishing project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get Free Estimate
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-100 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
