---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import ProcessScrollCards from '../../components/ProcessScrollCards.astro';
import FAQWithImage from '../../components/FAQWithImage.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Residential', url: 'https://www.cleancutservice.com/residential/' },
  { name: 'Deck Staining', url: 'https://www.cleancutservice.com/residential/deck-staining/' }
];

const faqs = [
  {
    question: "How long does deck staining last?",
    answer: "With proper preparation and quality products, our deck staining typically lasts 3-5 years depending on sun exposure and foot traffic."
  },
  {
    question: "Should I stain or seal my deck?",
    answer: "Stains add color and UV protection while sealers are clear. We'll assess your deck's condition and recommend the best option for your needs."
  },
  {
    question: "How do you prepare the deck before staining?",
    answer: "We pressure wash, sand, repair damaged boards, and ensure the surface is clean and dry before applying any stain."
  },
  {
    question: "What's the best time of year to stain a deck?",
    answer: "Spring and fall are ideal when temperatures are moderate. We avoid extreme heat, cold, or rainy periods for best results."
  },
  {
    question: "Can you stain a new deck?",
    answer: "New pressure-treated wood needs to weather for several months. We'll assess your deck and advise on the right timing."
  },
  {
    question: "Do you repair deck boards?",
    answer: "Yes! We replace rotted or damaged boards as part of our restoration process to ensure a solid, safe deck."
  }
];

const processSteps = [
  { number: 1, title: "Deep Cleansing", description: "We kick off the restoration journey with a thorough pressure wash, hand scrub, and rinse. This removes all dirt, mildew, and surface contaminants, preparing the surface for the revitalization process." },
  { number: 2, title: "Surface Refinement", description: "Orbital sanding is meticulously employed to eliminate all loose and peeling surfaces. This step not only prepares the wood for proper stain penetration but also opens up the wood grain, ensuring a more even and enduring finish." },
  { number: 3, title: "Structural Integrity", description: "Rotted or irreparable boards are promptly removed and replaced to restore the strength, safety, and long-term structural integrity of your deck." },
  { number: 4, title: "Stability Reinforcement", description: "Loose or shifting boards are carefully repaired and re-secured to improve overall stability, reduce movement, and create a safer, more solid surface." },
  { number: 5, title: "Sealing Perfection", description: "New caulking is professionally applied to fill and seal gaps, joints, and voids, helping prevent moisture intrusion and providing added protection against the elements." },
  { number: 6, title: "Color Transformation", description: "We apply two coats of high-quality exterior solid color stain to all surfaces, not just as a protective layer but as a vibrant transformation that enhances the aesthetic appeal of your deck." },
  { number: 7, title: "Client Satisfaction", description: "We're not finished until you're 100% satisfied. Our work is backed by post-project support and warranty protection." }
];
---

<Layout
  title="Deck Staining & Restoration Decatur IL | Clean Cut"
  description="Professional deck staining and restoration services in Decatur & Springfield IL. Protect and beautify your outdoor space. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Deck Staining.webp"
        alt="Professional deck staining services in Decatur IL"
        class="absolute inset-0 w-full h-full object-cover"
       width="1600" height="1038">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Deck Staining
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Restore, Protect, and Refresh Your Outdoor Spaces
          </p>
        </div>
      </div>
    </section>

    <!-- Combined Intro + What We Restore Section (same gray background) -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <!-- Intro Text -->
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Complete Deck Restoration Services
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Your deck is more than just an outdoor platform, it’s a space for gathering, relaxing, and making memories. Clean Cut Painting & Handyman specializes in deck repair, restoration, and staining to bring back its beauty and extend its life. We make the process straightforward and stress-free, so your outdoor space can shine again without the hassle of a full replacement.
          </p>
        </div>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/deck-rebuild.webp"
              alt="Deck surface staining in Springfield Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="deck-services"
             width="1600" height="1600"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Rebuild</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/deck-restoration.webp"
              alt="Steps and stairs staining in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="deck-services"
             width="1600" height="1200"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Restoration</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/deck-restaining.webp"
              alt="Deck railing restoration in Macon County"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="deck-services"
             width="1600" height="1600"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Restaining</p>
            </div>
          </div>
          
          </div>
          

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Clear Estimates & Beyond Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Clear Estimates -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Transforming Outdoor Spaces
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Deck services at Clean Cut are about more than maintenance, they’re about creating a space you and your family can enjoy for years. Our team combines skill, attention to detail, and a dedication to client satisfaction in every project.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Book Your Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/drive-photos/deck-transforming.webp"
              alt="Beautifully restored deck by Clean Cut in Decatur IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1600" height="1600"/>
          </div>
        </div>

        <!-- Beyond the Stain -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/drive-photos/beyond-the-stain.webp"
              alt="Complete deck restoration and rebuild in Springfield Illinois"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1200" height="1200"/>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond the Stain
            </h2>
            <p class="text-xl font-bold text-sky-500 mb-4">
              We go beyond surface work.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed">
              From repairing steps, railings, and lattice to applying high quality stains, we ensure your deck is both visually stunning and built to last. Every project is approached thoughtfully to protect the wood and enhance the outdoor living experience.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Scroll Cards -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Deck Staining Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From start to finish, we stand behind our work with warranties and support you can trust.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/drive-photos/beyond-the-stain.webp"
              alt="Featured deck staining project in Decatur IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="1200" height="1200"/>
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/deck-project-1.webp"
              alt="Completed professional deck staining in Sangamon County"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="1200" height="1600"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/deck-project-2.webp"
              alt="Quality deck staining craftsmanship in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="1200" height="1200"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/deck-project-3.webp"
              alt="Deck restoration by Clean Cut in Decatur Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="1200" height="1200"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/deck-staining/520940369_18021643070725762_272670694070179050_n.webp"
              alt="Deck staining transformation in Springfield IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="414" height="414"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/deck-staining/522093810_18022111262725762_1937926814355583042_n.webp"
              alt="Professional deck refinishing services in Decatur IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="414" height="414"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/deck-staining/543046979_18027770933725762_2680363837880653339_n.webp"
              alt="Finished outdoor deck space in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="deck-gallery"
             width="1080" height="1080"/>
          </div>
        </div>

        <!-- Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ Section with Video -->
    <FAQWithImage
      faqs={faqs}
      title="Deck Staining FAQs"
      backgroundImage="/images/faq-backgrounds/deck-staining-new.webp"
      imageAlt="Deck staining project by Clean Cut"
    />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={breadcrumbs} />
    <ServiceSchema name="Deck Staining & Restoration" description="Professional deck staining and restoration in Decatur, Springfield, and Central Illinois. Cleaning, staining, sealing, and weatherproofing." url="https://www.cleancutservice.com/residential/deck-staining/" />

    
    <!-- Related Services -->
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Related Services</h2>
        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <a href="/residential/exterior-painting/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Exterior Painting</h3>
            <p class="text-gray-600 text-sm">Match your deck with a fresh exterior paint job</p>
          </a>
          <a href="/residential/power-washing/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Power Washing</h3>
            <p class="text-gray-600 text-sm">Clean your deck and surfaces before staining</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Deck?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your deck staining project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-700 text-white font-bold text-lg rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
