---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import ProcessScrollCards from '../../components/ProcessScrollCards.astro';
import FAQAccordion from '../../components/FAQAccordion.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';

const faqs = [
  {
    question: "How often should I power wash my home?",
    answer: "Most homes benefit from annual power washing. Homes near trees or in humid areas may need more frequent cleaning."
  },
  {
    question: "Can power washing damage my siding?",
    answer: "When done correctly, no. We adjust pressure settings and techniques based on your siding material to clean safely."
  },
  {
    question: "Do you clean gutters too?",
    answer: "Yes! Our service includes debris removal and downspout flushing to ensure proper drainage and prevent water damage."
  },
  {
    question: "What surfaces do you power wash?",
    answer: "We clean siding, decks, patios, driveways, walkways, fences, and more. If you have a specific surface, just ask!"
  },
  {
    question: "Is power washing safe for windows?",
    answer: "We hand scrub windows and frames rather than using high pressure, ensuring a thorough clean without risk of damage."
  },
  {
    question: "How long does a power washing job take?",
    answer: "Most residential jobs take 2-4 hours depending on home size and surfaces cleaned. We'll give you a time estimate upfront."
  }
];

const processSteps = [
  { number: 1, title: "Hand Scrub and Deep Clean", description: "We don't just power wash; we go the extra mile by hand scrubbing and deep cleaning all surfaces. This includes windows, light fixtures, and door and window frames. Every inch of your home receives the attention it needs to shine." },
  { number: 2, title: "Gutter Care Excellence", description: "Our commitment extends to the health of your gutters. We not only remove debris but also go a step further by thoroughly flushing your downspouts. This ensures optimal function, preventing potential issues and safeguarding your home." },
  { number: 3, title: "Concrete Revitalization", description: "When it comes to cleaning concrete, we utilize a specialized concrete degreaser. This powerful solution ensures the thorough removal of all surface contaminants, leaving your concrete surfaces looking refreshed and renewed." }
];
---

<Layout
  title="Power Washing | Professional Pressure Washing Services"
  description="Power washing services that go beyond the basics with meticulous attention to detail and comprehensive home care. Serving Decatur & Springfield IL. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Power Washing.webp"
        alt="Professional power washing services in Decatur IL"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Power Washing
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Deep Cleaning That Makes a Difference
          </p>
        </div>
      </div>
    </section>

    <!-- Combined Intro + What We Clean Section (same gray background) -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <!-- Intro Text -->
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Comprehensive Power Washing Services
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Restore and refresh your home with Clean Cut Painting & Handyman’s professional residential power washing services. We go beyond the basics, delivering a thorough clean that leaves every surface looking renewed and well-maintained.
          </p>
        </div>

        <!-- CTA -->
        <div class="text-center">
          <button data-open-estimate class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            Book Your Proposal
          </button>
        </div>
      </div>
    </section>

    <!-- Clear Estimates & Beyond Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Clear Estimates -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Comprehensive Power Washing Services
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Restore and refresh your home with Clean Cut Painting & Handyman’s professional residential power washing services. We go beyond the basics, delivering a thorough clean that leaves every surface looking renewed and well-maintained.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/drive-photos/pw-section1.jpg"
              alt="Power washing transformation by Clean Cut in Decatur IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Beyond Basic -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/drive-photos/pw-section2.jpg"
              alt="Hand scrubbing and power washing in Springfield Illinois"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond Basic Power Washing
            </h2>
            <ul class="space-y-4 text-lg text-gray-600">
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Thorough Cleaning:</strong> Hand scrubbing and deep cleaning for spotless results</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Gutter Care:</strong> Complete debris removal and downspout flushing to protect your home</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Concrete Cleaning:</strong> Effective degreasing for driveways, patios, and walkways</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Transformative Results:</strong> Improve your home’s appearance and curb appeal</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Scroll Cards -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Wide Image Strip -->
    <section class="py-0">
      <div class="w-full h-72 md:h-96 overflow-hidden">
        <img
          src="/images/drive-photos/pw-image-strip.jpg"
          alt="Professional power washing results in Central Illinois"
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    </section>

    <!-- FAQ Section -->
    <FAQAccordion faqs={faqs} title="Power Washing FAQs" initialVisible={3} />
    <FAQSchema faqs={faqs} />

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Transform Your Home's Appearance
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your power washing project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
