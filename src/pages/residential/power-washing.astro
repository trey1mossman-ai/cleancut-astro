---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import ProcessScrollCards from '../../components/ProcessScrollCards.astro';

const processSteps = [
  { number: 1, title: "Hand Scrub and Deep Clean", description: "We don't just power wash; we go the extra mile by hand scrubbing and deep cleaning all surfaces. This includes windows, light fixtures, and door and window frames. Every inch of your home receives the attention it needs to shine." },
  { number: 2, title: "Gutter Care Excellence", description: "Our commitment extends to the health of your gutters. We not only remove debris but also go a step further by thoroughly flushing your downspouts. This ensures optimal function, preventing potential issues and safeguarding your home." },
  { number: 3, title: "Concrete Revitalization", description: "When it comes to cleaning concrete, we utilize a specialized concrete degreaser. This powerful solution ensures the thorough removal of all surface contaminants, leaving your concrete surfaces looking refreshed and renewed." }
];
---

<Layout
  title="Clean Cut Power Washing | Professional Pressure Washing Services"
  description="Power washing services that go beyond the basics with meticulous attention to detail and comprehensive home care. Serving Decatur & Springfield IL. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Power Washing.webp"
        alt="Professional power washing services"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Clean Cut Power Washing
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Deep Cleaning That Makes a Difference
          </p>
        </div>
      </div>
    </section>

    <!-- Combined Intro + What We Clean Section (same gray background) -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <!-- Intro Text -->
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Comprehensive Power Washing Services
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            From exterior surfaces to concrete, we clean every area with meticulous attention to detail. Our thorough approach includes hand scrubbing and specialized treatments.
          </p>
        </div>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/1.webp"
              alt="Professional home exterior power washing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Home Exteriors</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/1-1.webp"
              alt="Driveway and walkway power washing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Driveways & Walkways</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/2-2.webp"
              alt="Deck and patio power washing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Decks & Patios</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/2-4.webp"
              alt="Fence power washing services"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Fences</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/3-3.webp"
              alt="Gutter cleaning and maintenance"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Gutters</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/exterior-painting/4-1.webp"
              alt="Window and frame power washing"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="power-washing-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Windows & Frames</p>
            </div>
          </div>
        </div>

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Clear Estimates & Beyond Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Clear Estimates -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Clear Estimates and Flexible Planning
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Every project starts with a free estimate and a detailed proposal. For larger power washing projects, we can phase the work to fit your budget and timeline, ensuring no surprises along the way.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/Home Page/Recent Projects/CC _ Home Page Photos_Recent Work_Pool Repair & Repaint.webp"
              alt="Power washing project transformation"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Beyond Basic -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/exterior-painting/march-25.webp"
              alt="Detailed hand scrubbing and power washing services"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond Basic Power Washing
            </h2>
            <p class="text-xl font-bold text-sky-500 mb-4">
              A great clean is more than just pressure.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed">
              We go the extra mile with hand scrubbing and deep cleaning of surfaces including windows, light fixtures, and door/window frames. Complete gutter maintenance with debris removal and downspout flushing, plus specialized concrete degreaser for driveways, patios, and walkways.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Scroll Cards -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Power Washing Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From start to finish, we stand behind our work with warranties and support you can trust.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/services-optimized/exterior-painting/1.webp"
              alt="Featured power washing transformation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/519661187_18021421895725762_3375230967664930050_n.webp"
              alt="Professional power washing - home exterior"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/552533568_18029634086725762_2275584699687083915_n.webp"
              alt="Power washing project - driveway and walkway"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/552527896_18029634068725762_4311999433661823934_n.webp"
              alt="Clean Cut Power Washing - deck and patio cleaning"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/539876508_18026133380725762_7240269548733735434_n.webp"
              alt="Professional power washing - fence cleaning"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/539451089_18026133398725762_4830453403844705301_n.webp"
              alt="Power washing - quality exterior cleaning"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/exterior-painting/515325683_18019944374725762_2104403430114134139_n.webp"
              alt="Clean Cut power washing project - complete exterior"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="power-washing-gallery"
            />
          </div>
        </div>

        <!-- Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Transform Your Home's Appearance
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your power washing project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
