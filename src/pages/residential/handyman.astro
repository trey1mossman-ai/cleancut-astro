---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import FAQAccordion from '../../components/FAQAccordion.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Residential', url: 'https://www.cleancutservice.com/residential/' },
  { name: 'Handyman Services', url: 'https://www.cleancutservice.com/residential/handyman/' }
];

const faqs = [
  {
    question: "What handyman services do you offer?",
    answer: "We handle tile work, flooring, drywall repair, custom millwork, built-ins, bathroom renovations, and general home repairs."
  },
  {
    question: "Do you do plumbing or electrical work?",
    answer: "We handle basic fixture replacements. For major plumbing or electrical, we partner with licensed specialists and can coordinate for you."
  },
  {
    question: "Can you help with home inspection repairs?",
    answer: "We regularly help homeowners tackle inspection punch lists efficiently, getting your home ready for closing."
  },
  {
    question: "How do you price handyman jobs?",
    answer: "We provide detailed estimates based on scope. Small jobs may be hourly while larger projects get flat-rate quotes."
  },
  {
    question: "Do you build custom shelving or built-ins?",
    answer: "Yes! Custom built-ins, closet systems, and shelving are specialties. We design and build to fit your space perfectly."
  }
  ,
  {
    question: "Do you offer emergency handyman services?",
    answer: "While we do not offer 24/7 emergency service, we do our best to accommodate urgent repair needs quickly. Contact our office at (217) 330-7310 and we will work to schedule your repair as soon as possible, often within a few business days."
  }
];
---

<Layout
  title="Handyman Services Decatur & Springfield IL | Clean Cut"
  description="Elevate your home with Clean Cut residential handyman services. From tile projects to custom built-ins, we handle all your home improvement needs. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Handyman Services.webp"
        alt="Professional handyman services in Decatur IL"
        class="absolute inset-0 w-full h-full object-cover"
       width="1600" height="1038">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Handyman Services
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Skilled Solutions for Every Corner of Your Home
          </p>
        </div>
      </div>
    </section>

    <!-- Intro Section - Image Left, Text Right -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <!-- Image -->
          <div>
            <img
              src="/images/drive-photos/handyman-section1-new.webp"
              alt="Clean Cut handyman services in Central Illinois"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1600" height="1600"/>
          </div>
          <!-- Text - Left Aligned -->
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Reliable Home Services You Can Trust
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed mb-8">
              Clean Cut Painting & Handyman offers a full range of residential handyman services designed to enhance both the functionality and beauty of your home. Our experienced team handles projects large and small, delivering craftsmanship, reliability, and attention to detail at every step.
            </p>
            <button data-open-estimate class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Start Your Project
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section - Blue Background, No Icons -->
    <section class="py-16 bg-[#144787]">
      <div class="container-custom">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-4 text-center">
            Our Services Include
          </h2>
          <p class="text-lg text-white/80 text-center mb-12 max-w-2xl mx-auto">From small repairs to full renovations, our team delivers quality craftsmanship on every project.</p>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Tile Projects</h3>
              <p class="text-white/80 text-sm">Install or repair bathroom and kitchen tile with seamless results</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Backsplashes</h3>
              <p class="text-white/80 text-sm">Add style and functionality with expertly crafted backsplashes</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Flooring Repair & Installation</h3>
              <p class="text-white/80 text-sm">Repair damaged floors or install new ones for a refreshed look</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Home Projects</h3>
              <p class="text-white/80 text-sm">From board and batten to wainscoting, enhance your home with timeless craftsmanship</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Custom Built-Ins & Closet Systems</h3>
              <p class="text-white/80 text-sm">Maximize your space with tailored storage solutions</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Custom Millwork</h3>
              <p class="text-white/80 text-sm">Elevate your home's character with handcrafted pieces built to last</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Home Inspection Reports</h3>
              <p class="text-white/80 text-sm">Stay ahead of repairs with detailed assessments</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">Furniture Assembly</h3>
              <p class="text-white/80 text-sm">Save time with professional assembly of furniture and fixtures</p>
            </div>

            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 hover:bg-white/15 transition-all duration-300">
              <h3 class="text-lg font-bold text-white mb-2">General Maintenance</h3>
              <p class="text-white/80 text-sm">From small repairs to routine upkeep, keep your home in top condition</p>
            </div>
          </div>

          <div class="text-center mt-10">
            <button data-open-estimate class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Start Your Project
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Expert Craftsmanship Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/drive-photos/handyman-section2-new.webp"
              alt="Clean Cut handyman professional at work in Springfield IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1600" height="1600"/>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Expert Craftsmanship You Can Trust
            </h2>
            <p class="text-xl font-bold text-sky-500 mb-4">
              A great project is more than just the finished result.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed">
              Our skilled handymen bring years of experience to every project. From intricate custom millwork to essential home repairs, we deliver precision and quality that stands the test of time. Whether you're tackling a home inspection report or upgrading your space with custom built-ins, our family-operated business ensures every detail is perfect.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Wide Image Strip - Parallax -->
    <section class="relative h-72 md:h-96 overflow-hidden">
      <div 
        class="absolute inset-0 bg-fixed bg-cover bg-center"
        style="background-image: url('/images/drive-photos/handyman-image-strip-new.webp');"
      ></div>
    </section>

    <!-- FAQ Section -->
    <!-- FAQ Section with Video -->
    <FAQAccordion
      faqs={faqs}
      title="Handyman Services FAQs"
      
       
    />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={breadcrumbs} />
    <ServiceSchema name="Handyman Services" description="Professional handyman services in Decatur, Springfield, and Central Illinois. Drywall repair, tile work, door installation, trim, caulking, and small home repairs." url="https://www.cleancutservice.com/residential/handyman/" />

    
    <!-- Related Services -->
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Related Services</h2>
        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <a href="/residential/interior-painting/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Interior Painting</h3>
            <p class="text-gray-600 text-sm">Paint after drywall and trim repairs</p>
          </a>
          <a href="/residential/cabinet-refinishing/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Cabinet Refinishing</h3>
            <p class="text-gray-600 text-sm">Refresh your cabinets alongside repairs</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Home?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your handyman project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-700 text-white font-bold text-lg rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
