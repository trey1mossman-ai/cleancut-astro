---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
---

<Layout
  title="Residential Handyman Services | Clean Cut Painting & Handyman"
  description="Elevate your home with Clean Cut residential handyman services. From tile projects to custom built-ins, we handle all your home improvement needs. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[500px] py-20 lg:py-24 overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Handyman Services.webp"
        alt="Professional handyman services"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Residential Handyman Services
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Elevate your home with comprehensive handyman services. From tile projects to custom built-ins, we handle all your home improvement needs.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Overview Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Comprehensive Handyman Services
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From custom millwork to general maintenance, we handle every project with precision and care
        </p>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-16 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/IMG_6904.webp"
              alt="Custom tile shower installation with gold fixtures"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Tile Projects</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/CLEAN-CUT-19-scaled-1.webp"
              alt="Custom bathroom vanity with stone accent wall"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Bathroom Renovations</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/545268678_18028087646725762_7333235915722150678_n.webp"
              alt="Flooring repair and installation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Flooring Repair & Installation</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/543745778_18027872903725762_2813762595052589321_n.webp"
              alt="Board and batten wainscoting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Board & Batten / Wainscoting</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/546236755_18028087628725762_8575736534731332789_n.webp"
              alt="Custom built-ins and closet systems"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Custom Built-Ins & Closets</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/handyman-services/CLEAN-CUT-9-scaled-1.webp"
              alt="Custom kitchen renovation with black cabinets and island"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="handyman-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Kitchen Renovations</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Full-Width Visual Break -->
    <section class="relative h-96 overflow-hidden">
      <img
        src="/images/services-optimized/handyman-services/CLEAN-CUT-9-scaled-1.webp"
        alt="Beautiful custom kitchen renovation project"
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
      />
    </section>

    <!-- Feature Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/handyman-services/Elevate-Your-Home-with-Clean-Cut-Residential-Handyman-Services.webp"
              alt="Clean Cut handyman professional at work"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Expert Craftsmanship You Can Trust
            </h2>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              Our skilled handymen bring years of experience to every project. From intricate custom millwork to essential home repairs, we deliver precision and quality that stands the test of time.
            </p>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Whether you're tackling a home inspection report or upgrading your space with custom built-ins, our family-operated business ensures every detail is perfect.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Schedule Consultation
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-white mb-12">
          Our Handyman Service Process
        </h2>
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                1
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Consultation & Assessment
              </h3>
              <p class="text-gray-600">
                We meet with you to understand your project needs and provide expert recommendations
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                2
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Detailed Planning
              </h3>
              <p class="text-gray-600">
                Careful planning and measurement to ensure perfect execution of your project
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                3
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Professional Installation
              </h3>
              <p class="text-gray-600">
                Expert craftsmanship using quality materials and proven techniques
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                4
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Quality Inspection
              </h3>
              <p class="text-gray-600">
                Thorough review to ensure every detail meets our high standards
              </p>
            </div>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-lg flex gap-6">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-full bg-sky-400 text-white flex items-center justify-center text-xl font-bold">
                5
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-[#144787] mb-2">
                Final Walkthrough
              </h3>
              <p class="text-gray-600">
                Project completion with your approval and satisfaction guarantee
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Handyman Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          Explore our portfolio of completed handyman projects showcasing our attention to detail and quality craftsmanship.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/services-optimized/handyman-services/IMG_6904.webp"
              alt="Stunning custom tile shower with gold fixtures"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/CLEAN-CUT-19-scaled-1.webp"
              alt="Custom bathroom vanity with stone accent wall"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/123_1.webp"
              alt="Pool tile repair and restoration"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/545268678_18028087646725762_7333235915722150678_n.webp"
              alt="Quality flooring installation project"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/543745778_18027872903725762_2813762595052589321_n.webp"
              alt="Board and batten wainscoting installation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/546236755_18028087628725762_8575736534731332789_n.webp"
              alt="Custom built-ins and closet systems"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/handyman-services/559111309_18031886504725762_7943760075710809760_n.webp"
              alt="Clean Cut handyman project - finished result"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="handyman-gallery"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Home?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your handyman project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get Free Estimate
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-100 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
