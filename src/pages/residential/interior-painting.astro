---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import HorizontalProcess from '../../components/HorizontalProcess.astro';

const processSteps = [
  { number: 1, title: "Protect", description: "Protect furniture, floors, and fixtures" },
  { number: 2, title: "Prep", description: "Prep surfaces with sanding, priming, and repairs" },
  { number: 3, title: "Apply", description: "Apply expert finish coats for lasting results" },
  { number: 4, title: "Inspect", description: "Inspect and finalize with your approval" }
];
---

<Layout
  title="Interior Painting | Clean Cut Painting & Handyman"
  description="Transform your indoor spaces with precision and style. Professional interior painting services in Decatur & Springfield IL. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Interior Painting.webp"
        alt="Professional interior painting services"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Interior Painting
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Transform Your Indoor Spaces with Precision and Style
          </p>
        </div>
      </div>
    </section>

    <!-- Intro Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Color, Style, and Craftsmanship You Can Trust
          </h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Specializing in high-quality interior painting that refreshes your home from the inside out. Our team delivers smooth finishes, clean lines, and results that reflect your personal style.
          </p>
        </div>
      </div>
    </section>

    <!-- What We Paint Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6783.webp"
              alt="Professional wall painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Walls</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6843.webp"
              alt="Ceiling painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Ceilings</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6822-2.webp"
              alt="Trim painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Trim</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6873.webp"
              alt="Door painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Doors</p>
            </div>
          </div>
        </div>

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Clear Estimates Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Clear Estimates and Flexible Planning
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Every project starts with a free estimate and a detailed proposal. For larger projects, we can phase the work to fit your budget and timeline, ensuring no surprises along the way.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Ready to Refresh?
            </a>
          </div>
          <div>
            <img
              src="/images/services-optimized/interior-painting/4.webp"
              alt="Interior painting consultation"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Beyond the Paint Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Beyond the Paint
          </h2>
          <p class="text-lg text-gray-600 mb-4 leading-relaxed">
            A great paint job is more than just color. We provide guidance on color selection and design, and carefully manage furniture, wall decor, and room setup so everything is returned exactly as it was.
          </p>
          <p class="text-lg text-gray-600 leading-relaxed">
            By focusing on one room at a time, we minimize disruption and make the process seamless.
          </p>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Layout -->
    <HorizontalProcess steps={processSteps} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Interior Painting Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          Explore our portfolio of completed interior painting projects showcasing our attention to detail and quality craftsmanship.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/Home Page/Residential Services/CC _ Home Page Photos_Interior Painting.webp"
              alt="Featured interior painting transformation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6783.webp"
              alt="Professional interior painting - wall and ceiling work"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6843.webp"
              alt="Interior painting project - finished home interior"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6822-2.webp"
              alt="Clean Cut Painting - custom interior color selection"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/2.webp"
              alt="Professional interior painting - kitchen with white painted cabinets"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/542207858_622811790903167_5174595472123875714_n.webp"
              alt="Interior painting - quality craftsmanship showcase"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/march-26.webp"
              alt="Clean Cut Painting interior project - freshly painted walls"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
            />
          </div>
        </div>

        <!-- Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Interior?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your interior painting project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Ready to Refresh?
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-100 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
