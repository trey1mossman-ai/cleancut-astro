---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import ProcessScrollCards from '../../components/ProcessScrollCards.astro';
import FAQWithImage from '../../components/FAQWithImage.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Residential', url: 'https://www.cleancutservice.com/residential/' },
  { name: 'Interior Painting', url: 'https://www.cleancutservice.com/residential/interior-painting/' }
];

const processSteps = [
  { number: 1, title: "Protection and Preparation", description: "We meticulously mask and safeguard all flooring, fixtures, and contents as required." },
  { number: 2, title: "Detail Oriented Care", description: "Outlet covers, wall vents, and fixtures are detached and reset, ensuring no detail is overlooked." },
  { number: 3, title: "Surface Perfection", description: "Our team expertly repairs surfaces, followed by thorough sanding and priming to prepare for a flawless finish." },
  { number: 4, title: "Precision Painting", description: "Two finish coats of paint are applied to all surfaces to ensure proper depth and coverage." },
  { number: 5, title: "Client Satisfaction", description: "We're not finished until you're 100% satisfied. Our work is backed by post-project support and warranty protection." }
];

const faqs = [
  { 
    question: "How do you protect my home during interior house painting?", 
    answer: "During interior house painting projects, floors, furniture, fixtures, and adjacent surfaces are fully protected. Hardware and outlet covers are removed and reinstalled. Cleanliness and respect for your home are non-negotiable." 
  },
  { 
    question: "Do you repair drywall before interior painting?", 
    answer: "Yes. Professional interior painting includes repairing nail pops, cracks, dents, seams, and minor drywall damage as part of proper preparation." 
  },
  { 
    question: "How long does interior house painting usually take?", 
    answer: "Most interior house painting projects take a few days to two weeks depending on home size, ceiling height, preparation needs, and scope. We provide a clear project timeline upfront." 
  },
  { 
    question: "Do you help with paint color and finish selection?", 
    answer: "Yes. We help clients choose paint colors and finishes based on durability, cleanability, lighting conditions, and how each space is used." 
  },
  { 
    question: "Do you offer a warranty on interior painting?", 
    answer: "All interior house painting is backed by a written workmanship warranty with coverage details clearly explained." 
  },
  { 
    question: "How much does it cost to paint a house interior in Central Illinois?", 
    answer: "Interior house painting costs in Central Illinois typically range from $2.75 to $5.50 per square foot for walls. Whole home projects commonly range from $4,500 to $12,000 or more. Final pricing depends on preparation, ceiling height, and finishes and is provided after an on-site evaluation." 
  }
];
---

<Layout
  title="Interior Painting Decatur & Springfield IL | Clean Cut"
  description="Transform your indoor spaces with precision and style. Professional interior painting services in Decatur & Springfield IL. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Interior Painting.webp"
        alt="Professional interior painting services in Decatur IL and Central Illinois"
        class="absolute inset-0 w-full h-full object-cover"
       width="2250" height="1459">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Interior Painting
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Transform Your Indoor Spaces with Precision and Style
          </p>
        </div>
      </div>
    </section>

    <!-- Combined Intro + What We Paint Section (same gray background) -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <!-- Intro Text -->
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Color, Style, and Craftsmanship You Can Trust
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Specializing in high-quality interior painting that refreshes your home from the inside out. Our team delivers smooth finishes, clean lines, and results that reflect your personal style.
          </p>
        </div>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6783.webp"
              alt="Professional wall painting by Clean Cut Painting in Decatur Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1920" height="1281"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Walls</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6843.webp"
              alt="Ceiling painting services in Springfield IL homes"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1920" height="1281"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Ceilings</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6822-2.webp"
              alt="Trim and baseboard painting in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1920" height="1281"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Trim</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/interior-painting/6t4a6873.webp"
              alt="Interior door painting by Decatur IL painters"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1920" height="1281"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Doors</p>
            </div>
          </div>
        </div>

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Clear Estimates & Beyond the Paint Combined Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Clear Estimates -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Clear Estimates and Flexible Planning
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Every project starts with a free estimate and a detailed proposal. For larger projects, we can phase the work to fit your budget and timeline, ensuring no surprises along the way.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/services-optimized/interior-painting/4.webp"
              alt="Interior painting consultation with Clean Cut in Macon County"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1080" height="1080"/>
          </div>
        </div>

        <!-- Beyond the Paint -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/interior-painting/2.webp"
              alt="Professional interior painting results in Springfield Illinois"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1080" height="1080"/>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond the Paint
            </h2>
            <p class="text-xl font-bold text-sky-500 mb-4">
              A great paint job is more than just color.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed">
              We provide guidance on color selection and design, and carefully manage furniture, wall d√©cor, and room setup so everything is returned exactly as it was. By focusing on one room at a time, we minimize disruption and make the process seamless.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Scroll Cards -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Interior Painting Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From start to finish, we stand behind our work with warranties and support you can trust.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/Home Page/Residential Services/CC _ Home Page Photos_Interior Painting.webp"
              alt="Featured interior painting transformation in Decatur IL home"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="2250" height="1459"/>
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6783.webp"
              alt="Professional interior wall and ceiling painting in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="1920" height="1281"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6843.webp"
              alt="Finished interior painting project in Springfield IL residence"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="1920" height="1281"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/6t4a6822-2.webp"
              alt="Custom interior color selection by Clean Cut Painting in Decatur"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="1920" height="1281"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/2.webp"
              alt="Kitchen interior painting with white cabinets in Macon County IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="1080" height="1080"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/542207858_622811790903167_5174595472123875714_n.webp"
              alt="Quality interior painting craftsmanship in Decatur Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="960" height="1200"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/interior-painting/march-26.webp"
              alt="Clean Cut interior painting project in Central Illinois home"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="interior-gallery"
             width="1080" height="1080"/>
          </div>
        </div>

        <!-- Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-700 text-white font-semibold rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ Section with Video -->
    <FAQWithImage
      faqs={faqs}
      title="Interior Painting FAQs"
      backgroundImage="/images/faq-backgrounds/interior-painting.webp"
      imageAlt="Interior painting project by Clean Cut"
    />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={breadcrumbs} />
    <ServiceSchema name="Interior Painting Services" description="Professional interior painting services for homes in Decatur, Springfield, and Central Illinois. Bedrooms, living rooms, kitchens, trim, ceilings, and accent walls." url="https://www.cleancutservice.com/residential/interior-painting/" />

    
    <!-- Related Services -->
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Related Services</h2>
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <a href="/residential/exterior-painting/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Exterior Painting</h3>
            <p class="text-gray-600 text-sm">Complete your home refresh with exterior painting</p>
          </a>
          <a href="/residential/cabinet-refinishing/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Cabinet Refinishing</h3>
            <p class="text-gray-600 text-sm">Transform your kitchen with cabinet refinishing</p>
          </a>
          <a href="/residential/handyman/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Handyman Services</h3>
            <p class="text-gray-600 text-sm">Drywall repair, trim, and more</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Interior?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your interior painting project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-700 text-white font-bold text-lg rounded-lg hover:bg-sky-800 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
