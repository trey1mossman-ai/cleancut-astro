---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FloatingCallButton from '../../components/FloatingCallButton.astro';
import Lightbox from '../../components/Lightbox.astro';
import ProcessScrollCards from '../../components/ProcessScrollCards.astro';
import FAQWithImage from '../../components/FAQWithImage.astro';
import FAQSchema from '../../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../../components/schema/BreadcrumbSchema.astro';
import ServiceSchema from '../../components/schema/ServiceSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Residential', url: 'https://www.cleancutservice.com/residential/' },
  { name: 'Exterior Painting', url: 'https://www.cleancutservice.com/residential/exterior-painting/' }
];

const processSteps = [
  { number: 1, title: "Deep Cleaning", description: "We begin with a thorough pressure wash, hand scrub, and rinse to remove all dirt, mildew, and surface contaminants, ensuring a clean canvas for your project." },
  { number: 2, title: "Attention to Detail", description: "Fixtures and hardware are carefully detached and reset as needed, with precision to maintain every aspect of your exterior's aesthetic." },
  { number: 3, title: "Surface Preparation", description: "We meticulously scrape and sand, eliminating all loose or peeling paint for a smooth foundation." },
  { number: 4, title: "Wood Restoration", description: "Rotted or irreparable wood is replaced, ensuring structural integrity and longevity." },
  { number: 5, title: "Surface Rehabilitation", description: "All surfaces are expertly repaired and re-secured as needed, addressing any imperfections." },
  { number: 6, title: "Sealing Perfection", description: "New caulking is applied to fill and seal all gaps and voids, providing an added layer of protection." },
  { number: 7, title: "Finishing Touch", description: "Two coats of exterior satin latex are skillfully applied, bringing your vision to life with lasting vibrancy." },
  { number: 8, title: "Client Satisfaction", description: "We're not finished until you're 100% satisfied. Our work is backed by post-project support and warranty protection." }
];

const faqs = [
  { 
    question: "What makes your exterior house painting process different?", 
    answer: "Our exterior house painting process emphasizes preparation first by addressing peeling paint, caulking failures, moisture issues, and surface integrity before applying coatings designed for Midwest weather." 
  },
  { 
    question: "When is the best time to paint a house exterior in Central Illinois?", 
    answer: "Late spring through early fall offers the best temperature and humidity conditions for exterior house painting in Central Illinois." 
  },
  { 
    question: "How long should exterior house paint last in Illinois?", 
    answer: "With proper preparation and quality materials, exterior house paint in Illinois should last many years. Longevity depends on exposure, surface condition, and maintenance." 
  },
  { 
    question: "Do you repair wood rot or siding before exterior painting?", 
    answer: "Yes. We do not paint over failing materials. Wood rot and damaged siding are repaired before exterior painting begins." 
  },
  { 
    question: "Is pressure washing included with exterior painting?", 
    answer: "Yes. Pressure washing is included when appropriate and is essential for proper adhesion and long-term durability." 
  },
  { 
    question: "How much does exterior house painting cost in Decatur or Springfield Illinois?", 
    answer: "Exterior house painting costs in Decatur, Springfield, and surrounding Central Illinois areas depend on home size, surface condition, preparation requirements, and materials. We provide a written estimate after evaluating the property." 
  }
];
---

<Layout
  title="Exterior Painting Decatur & Springfield IL | Clean Cut"
  description="Transform your home's exterior with precision and expertise. Professional exterior painting services in Decatur & Springfield IL. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section - Centered -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Residential Services/CC _ Home Page Photos_Exterior Painting.webp"
        alt="Professional exterior painting services in Decatur IL"
        class="absolute inset-0 w-full h-full object-cover"
       width="2250" height="1459">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Exterior Painting
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Reliable Exterior Work You Can Trust
          </p>
        </div>
      </div>
    </section>

    <!-- Combined Intro + What We Paint Section (same gray background) -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <!-- Intro Text -->
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Expert Exterior Updates You Can Count On
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Helping homeowners protect and enhance their homes with professional exterior painting and repair services. Our team combines proper preparation, high-quality materials, and expert application to deliver finishes that look impressive and stand the test of time.
          </p>
        </div>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/ext-siding-brick.webp"
              alt="Siding and brick painting services in Springfield Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1600" height="1600"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Siding & Brick</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/ext-gutters-soffits.webp"
              alt="Soffits and fascia painting in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1600" height="1600"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Gutters, Soffits & Fascia</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/ext-porch-railings.webp"
              alt="Gutters and downspouts painting in Macon County"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1600" height="1600"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Porch Post & Railings</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/drive-photos/ext-garage-doors.webp"
              alt="Windows and doors painting in Decatur Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="services-gallery"
             width="1600" height="1068"/>
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Garage Doors</p>
            </div>
          </div>
          
          </div>
        </div>

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Clear Estimates & Beyond the Paint Combined Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Clear Estimates -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Transparent Pricing, Thoughtful Planning
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Every project starts with a free estimate and a detailed proposal. For larger exterior projects, we can phase the work to fit your budget and timeline, ensuring no surprises along the way.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/drive-photos/exterior-transparent-pricing.webp"
              alt="Exterior painting consultation with Clean Cut in Decatur IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1600" height="1600"/>
          </div>
        </div>

        <!-- Beyond the Paint -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/exterior-painting/1.webp"
              alt="Clean Cut crew working on exterior painting project in Springfield IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
             width="1080" height="1080"/>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Beyond the Paint
            </h2>
            <p class="text-xl font-bold text-sky-500 mb-4">
              True curb appeal takes more than just paint.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed">
              We offer comprehensive exterior services including tuckpointing, porch repair, landscaping, and patios. Our team handles all the details so every aspect of your project is complete. From small repairs to major transformations, we make the process seamless and stress-free.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section - Horizontal Scroll Cards -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Exterior Painting Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From start to finish, we stand behind our work with warranties and support you can trust.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/drive-photos/exterior-gallery-main-new.webp"
              alt="Featured exterior painting transformation in Decatur Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1600"/>
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-1.webp"
              alt="Professional exterior siding and trim painting in Sangamon County"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1599"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-2.webp"
              alt="Finished home exterior painting project in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1599"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-3.webp"
              alt="Custom exterior color selection by Clean Cut in Decatur IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1600"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-4.webp"
              alt="House with fresh exterior paint in Springfield Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1600"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-5.webp"
              alt="Quality exterior painting craftsmanship in Decatur IL"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1600"/>
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/drive-photos/exterior-gallery-6.webp"
              alt="Freshly painted home exterior by Clean Cut in Central Illinois"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="exterior-gallery"
             width="1600" height="1600"/>
          </div>
        </div>

        <!-- Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-600 text-white font-semibold rounded-lg hover:bg-sky-700 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ Section with Video -->
    <FAQWithImage
      faqs={faqs}
      title="Exterior Painting FAQs"
      backgroundImage="/images/faq-backgrounds/exterior-painting-new.webp"
      imageAlt="Exterior painting project by Clean Cut"
    />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={breadcrumbs} />
    <ServiceSchema name="Exterior House Painting" description="Professional exterior house painting in Decatur, Springfield, and Central Illinois. Siding, trim, porches, garages, and weather-resistant finishes." url="https://www.cleancutservice.com/residential/exterior-painting/" />

    
    <!-- Related Services -->
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Related Services</h2>
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <a href="/residential/interior-painting/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Interior Painting</h3>
            <p class="text-gray-600 text-sm">Complete your home makeover inside and out</p>
          </a>
          <a href="/residential/deck-staining/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Deck Staining</h3>
            <p class="text-gray-600 text-sm">Protect and beautify your deck</p>
          </a>
          <a href="/residential/power-washing/" class="bg-white rounded-xl p-6 shadow-sm border border-gray-200 hover:shadow-lg hover:border-sky-200 transition-all duration-300 text-center group">
            <h3 class="text-lg font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-2">Power Washing</h3>
            <p class="text-gray-600 text-sm">Prep your surfaces with professional power washing</p>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Exterior?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your exterior painting project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-600 text-white font-bold text-lg rounded-lg hover:bg-sky-700 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
