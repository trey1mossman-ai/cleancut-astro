---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Who We Are', url: 'https://www.cleancutservice.com/who-we-are/' }
];

const leadershipTeam = [
  { name: 'Dara Geiser', title: 'Owner & President', image: '/images/team/dara-geiser.webp', alt: 'Dara Geiser, Owner and President of Clean Cut Painting & Handyman in Decatur IL' },
  { name: 'Colby Geiser', title: 'Operations Manager', image: '/images/team/colby-geiser.webp', alt: 'Colby Geiser, Operations Manager at Clean Cut Painting in Central Illinois' },
  { name: 'Jack Geiser', title: 'Operations Manager', image: '/images/team/jack-geiser.webp', alt: 'Jack Geiser, Operations Manager at Clean Cut Painting & Handyman Springfield IL' },
  { name: 'Tyler Tate', title: 'Chief Revenue Officer', image: '/images/team/tyler-tate.webp', alt: 'Tyler Tate, Chief Revenue Officer at Clean Cut Painting Decatur Illinois' },
  { name: 'Colleen Hayes', title: 'Director of Marketing', image: '', alt: 'Colleen Hayes, Director of Marketing at Clean Cut Painting & Handyman' },
  { name: 'Alyssa Stanford', title: 'Administrative Assistant', image: '/images/team/alyssa-stanford.webp', alt: 'Alyssa Stanford, Administrative Assistant at Clean Cut Painting Central Illinois' },
  { name: 'Sergio Sanchez', title: 'Director of Production', image: '/images/team/sergio-sanchez.webp', alt: 'Sergio Sanchez, Project Manager at Clean Cut Painting & Handyman Macon County' },
  { name: 'Heath Kavanaugh', title: 'Director of Production', image: '/images/team/heath-kavanaugh.webp', alt: 'Heath Kavanaugh, Project Manager at Clean Cut Painting Springfield Illinois' },
];

const faqs = [
  {
    "question": "How big is the Clean Cut team?",
    "answer": "Our team includes experienced project managers, lead painters, and skilled tradespeople. Key team members include Tyler Tate (Chief Revenue Officer), Sergio Sanchez and Heath Kavanaugh (Directors of Production), and Colleen Hayes (Director of Marketing)."
  },
  {
    "question": "Does Clean Cut hire locally?",
    "answer": "Yes. We are committed to hiring locally in Central Illinois. Our team members live and work in the communities we serve, including Decatur and Springfield."
  },
  {
    "question": "What makes the Clean Cut team different?",
    "answer": "Every team member is trained in our proven process and held to the highest standards of craftsmanship. We focus on communication, attention to detail, and leaving every job site cleaner than we found it."
  },
  {
    "question": "Is Clean Cut a woman-owned business?",
    "answer": "Yes. Clean Cut Painting & Handyman was founded and is owned by Dara Geiser, making it a woman-owned business serving Central Illinois since 2016."
  },
  {
    "question": "How does Clean Cut ensure quality on every project?",
    "answer": "We follow a structured process from estimate through final walkthrough. Every project gets dedicated oversight from a project manager, with quality checkpoints at each stage and a satisfaction guarantee."
  },
  {
    "question": "Can I meet the team before my project starts?",
    "answer": "Absolutely. During your free estimate, you will meet with a project manager who will be your point of contact throughout the entire project. We believe in building relationships, not just painting walls."
  }
];
---
<BreadcrumbSchema items={breadcrumbs} />


<Layout
  title="Who We Are | Clean Cut Painting & Handyman"
  description="Meet the Clean Cut team in Decatur & Springfield, IL. 10+ years of painting & handyman experience. Woman-owned, licensed, bonded & insured."
>
  <Header />

  <main>
    <!-- Hero Section with Image -->
    <section class="relative min-h-[400px] flex items-center overflow-hidden">
      <img
        src="/images/who-we-are-hero.webp"
        alt="Clean Cut Painting & Handyman team at work"
        class="absolute inset-0 w-full h-full object-cover"
       width="1600" height="1067"/>
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Meet the Clean Cut Team
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Craftsmanship, Collaboration, and Commitment
          </p>
        </div>
      </div>
    </section>

    <!-- Intro Section - Left aligned text with image on right (mirrored style) -->
    <section class="py-16 bg-white">
      <div class="container-custom relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              The Heart of Clean Cut
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              At Clean Cut Painting & Handyman, our team is at the heart of everything we do. From our founders to our skilled applicators and installers, every member plays a key role in turning your vision into reality. Together, we bring decades of combined experience, a dedication to quality, and a personal touch to every project.
            </p>
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img
              src="/images/our-approach.webp"
              alt="Clean Cut team working together"
              class="w-full h-80 lg:h-96 object-cover"
              loading="lazy"
             width="1600" height="2134"/>
          </div>
        </div>
      </div>
    </section>

    <!-- Leadership Team Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom relative z-10">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-12">
          Leadership Team
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 max-w-6xl mx-auto">
          {leadershipTeam.map((member) => (
            <div class="bg-white rounded-xl shadow-md overflow-hidden text-center">
              <div class="aspect-square bg-gray-200 relative overflow-hidden flex items-center justify-center">
                {member.image ? (
                  <img
                    src={member.image}
                    alt={member.alt}
                    class="absolute inset-0 w-full h-full object-cover object-top"
                    loading="lazy"
                  />
                ) : (
                  <span class="text-4xl font-bold text-[#144787]/30">{member.name.split(' ').map(n => n[0]).join('')}</span>
                )}
              </div>
              <div class="p-4">
                <h3 class="text-lg font-bold text-[#144787]">{member.name}</h3>
                <p class="text-gray-600 text-sm">{member.title}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Our Extended Team - Mirrored Section (image left, text right) -->
    <section class="py-16 bg-white">
      <div class="container-custom relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img
              src="/images/extended-team.webp"
              alt="Clean Cut extended team of skilled applicators and installers"
              class="w-full h-80 lg:h-96 object-cover"
              loading="lazy"
             width="1600" height="1068"/>
          </div>
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Our Extended Team
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              Beyond leadership, Clean Cut is proud to have 50+ in-house skilled applicators and installers who bring expertise, dedication, and passion to every project. Their craftsmanship and attention to detail ensure every space we touch looks exceptional.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Approach - Mirrored Section (text left, image right) -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom relative z-10">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Our Approach
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              Every project is a collaboration. Our team works closely with clients to understand goals, provide guidance, and deliver results that exceed expectations. From the first brushstroke to the final detail, every action reflects the professionalism, values, and commitment of Clean Cut Painting & Handyman.
            </p>
          </div>
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img
              src="/images/who-we-are-hero.webp"
              alt="Clean Cut team collaborating on a project"
              class="w-full h-80 lg:h-96 object-cover"
              loading="lazy"
             width="1600" height="1067"/>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Work With Us?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get in touch to discuss your next project
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Contact Us
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>

    
    <!-- Internal Links -->
    <section class="py-12 bg-white">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Explore Clean Cut</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
          <a href="/about/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">About Us</h3>
            <p class="text-gray-500 text-sm">Our story, mission, and core values</p>
          </a>
          <a href="/our-process/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Our Process</h3>
            <p class="text-gray-500 text-sm">How we deliver exceptional results</p>
          </a>
          <a href="/our-work/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Our Work</h3>
            <p class="text-gray-500 text-sm">See completed projects across Central IL</p>
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom max-w-4xl">
        <h2 class="text-3xl font-display font-bold text-[#144787] text-center mb-10">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {faqs.map((faq) => (
            <details class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden group">
              <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50 transition-colors">
                <h3 class="text-lg font-semibold text-[#144787] pr-4">{faq.question}</h3>
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-600 leading-relaxed">{faq.answer}</div>
            </details>
          ))}
        </div>
      </div>
    </section>
    <FAQSchema faqs={faqs} />
  </main>

  <Footer />
  <FloatingCallButton />
</Layout>