---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'Contact', url: 'https://www.cleancutservice.com/contact/' }
];

const faqs = [
  {
    "question": "What are your business hours?",
    "answer": "Our office is open Monday through Friday from 7:30 AM to 4:30 PM and Saturday from 8:00 AM to 1:00 PM. We are closed on Sundays. You can also reach us anytime through our website contact form."
  },
  {
    "question": "Do you serve my area?",
    "answer": "We serve a 60-mile radius across Central Illinois, including Decatur, Springfield, Champaign-Urbana, Mount Zion, Forsyth, Chatham, Taylorville, Lincoln, Mattoon, and Bloomington-Normal. Contact us to confirm service in your area."
  },
  {
    "question": "How fast do you respond to inquiries?",
    "answer": "We respond to all inquiries within 24 hours, and most are answered the same business day. For urgent requests, call our Decatur office at (217) 330-7310 or our Springfield office at (217) 672-5654."
  },
  {
    "question": "How do I get a free estimate?",
    "answer": "You can request a free estimate by calling (217) 330-7310, filling out the form on our contact page, or emailing info@cleancutservice.com. We will schedule a convenient time to visit your property."
  },
  {
    "question": "Do you have offices in both Decatur and Springfield?",
    "answer": "Yes. Our Decatur headquarters is at 1004 E Eldorado St, Decatur, IL 62521, and our Springfield office is at 631 E Princeton Ave, Unit D, Springfield, IL 62703."
  },
  {
    "question": "What information should I have ready when requesting an estimate?",
    "answer": "It helps to know the approximate scope of your project (number of rooms, exterior areas, etc.), your preferred timeline, and any specific concerns like surface damage or color preferences. We will handle the rest during our on-site visit."
  }
];
---

<BreadcrumbSchema items={breadcrumbs} />

<Layout
  title="Contact Us | Clean Cut Painting & Handyman"
  description="Get in touch with Clean Cut Painting & Handyman for a free estimate. Serving Decatur & Springfield, IL with professional painting and handyman services."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[400px] flex items-center overflow-hidden">
      <img
        src="/images/Correct-Hero.webp"
        alt="Contact Clean Cut Painting & Handyman - serving Decatur, Springfield, and Central Illinois"
        class="absolute inset-0 w-full h-full object-cover"
       width="1600" height="900">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Contact Us
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Ready to transform your space? Get in touch with our team today for a free estimate.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Left Column - Contact Info -->
          <div class="flex flex-col h-full space-y-6">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">Our Locations</h2>
            <p class="text-lg text-gray-600 mb-8">
              Visit us at one of our convenient locations or give us a call.
            </p>

            <!-- Location Cards - Equal Height Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2 gap-6">
              <!-- Decatur Office -->
              <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 p-6 border border-gray-100 h-full flex flex-col">
                <h3 class="text-xl font-semibold text-[#144787] mb-4">Decatur Office</h3>
                <div class="space-y-3 text-gray-600 flex-1">
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Address</p>
                    <a href="https://maps.app.goo.gl/hLobyq7uRhDd1dQf9" target="_blank" rel="noopener" class="text-sky-400 hover:text-sky-500 transition-colors">1004 E Eldorado St<br>Decatur, IL 62521</a>
                  </div>
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Phone</p>
                    <a href="tel:+12173307310" class="text-sky-400 hover:text-sky-500 transition-colors">(217) 330-7310</a>
                  </div>
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Email</p>
                    <a href="mailto:info@cleancutservice.com" class="text-sky-400 hover:text-sky-500 transition-colors">info@cleancutservice.com</a>
                  </div>
                </div>
                <p class="text-sm italic text-gray-500 mt-4">By appointment only</p>
              </div>

              <!-- Springfield Office -->
              <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 p-6 border border-gray-100 h-full flex flex-col">
                <h3 class="text-xl font-semibold text-[#144787] mb-4">Springfield Office</h3>
                <div class="space-y-3 text-gray-600 flex-1">
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Address</p>
                    <a href="https://maps.app.goo.gl/GBpRbG44QXbm1Jnm9" target="_blank" rel="noopener" class="text-sky-400 hover:text-sky-500 transition-colors">631 E Princeton Ave, Unit D<br>Springfield, IL 62703</a>
                  </div>
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Phone</p>
                    <a href="tel:+12176725654" class="text-sky-400 hover:text-sky-500 transition-colors">(217) 672-5654</a>
                  </div>
                  <div>
                    <p class="font-semibold text-sm text-[#144787] mb-1">Email</p>
                    <a href="mailto:info@cleancutservice.com" class="text-sky-400 hover:text-sky-500 transition-colors">info@cleancutservice.com</a>
                  </div>
                </div>
                <p class="text-sm italic text-gray-500 mt-4">By appointment only</p>
              </div>
            </div>

            <!-- Hours + 24/7 Language Below Cards -->
            <div class="mt-auto bg-[#144787]/5 rounded-lg p-6 border border-[#144787]/10">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                  <p class="font-semibold text-[#144787] mb-1">Office Hours</p>
                  <p class="text-gray-600 text-sm">Mon-Fri: 7:30am-4:30pm | Sat: 8:00am-1:00pm</p>
                </div>
                <div class="sm:text-right">
                  <p class="font-semibold text-sky-500">Phone Line: Available 24/7</p>
                  <p class="text-gray-600 text-sm">For new inquiries & urgent repairs</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Contact Form -->
          <div class="flex flex-col h-full">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">Get Your Free Estimate</h2>
            <p class="text-lg text-gray-600 mb-8">
              Fill out the form below and we'll get back to you within 24 hours.
            </p>
            <form 
              id="contact-form"
              action="https://flow.voxemarketing.com/webhook/b6a9cc41-bace-4fce-ba1f-514cfaa8af19"
              method="POST"
              class="space-y-4"
            >
              <div>
                <input
                  type="text"
                  id="contact-name"
                  name="full-name"
                  placeholder="Full Name *"
                  required
                  class="w-full h-12 px-4 py-2.5 bg-white border border-gray-200 rounded-lg focus:border-sky-400 focus:ring-2 focus:ring-sky-400/10 focus:outline-none transition-all"
                >
              </div>
              <div>
                <input
                  type="tel"
                  id="contact-phone"
                  name="phone"
                  placeholder="Phone Number *"
                  required
                  class="w-full h-12 px-4 py-2.5 bg-white border border-gray-200 rounded-lg focus:border-sky-400 focus:ring-2 focus:ring-sky-400/10 focus:outline-none transition-all"
                >
              </div>
              <div>
                <input
                  type="email"
                  id="contact-email"
                  name="email"
                  placeholder="Email Address *"
                  required
                  class="w-full h-12 px-4 py-2.5 bg-white border border-gray-200 rounded-lg focus:border-sky-400 focus:ring-2 focus:ring-sky-400/10 focus:outline-none transition-all"
                >
              </div>
              <div>
                <label for="contact-service" class="sr-only">Service Needed</label>
                <select
                  id="contact-service"
                  name="service"
                  required
                  class="w-full h-12 px-4 py-2.5 bg-white border border-gray-200 rounded-lg focus:border-sky-400 focus:ring-2 focus:ring-sky-400/10 focus:outline-none transition-all"
                >
                  <option value="">Service Needed *</option>
                  <option value="interior-painting">Interior Painting</option>
                  <option value="exterior-painting">Exterior Painting</option>
                  <option value="cabinet-refinishing">Cabinet Refinishing</option>
                  <option value="deck-staining">Deck Staining</option>
                  <option value="power-washing">Power Washing</option>
                  <option value="handyman">Handyman Services</option>
                  <option value="commercial">Commercial Services</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div>
                <textarea
                  id="contact-message"
                  name="message"
                  placeholder="Message (Optional)"
                  rows="5"
                  class="w-full px-4 py-2.5 bg-white border border-gray-200 rounded-lg focus:border-sky-400 focus:ring-2 focus:ring-sky-400/10 focus:outline-none transition-all resize-none"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full px-6 py-3 bg-sky-500 text-white font-semibold rounded-lg hover:bg-sky-600 transition-colors shadow-md"
              >
                Send Request
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Rather Talk It Through?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Our team is happy to answer questions and provide a free estimate.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="tel:+12173307310" class="px-8 py-4 bg-sky-500 text-white font-bold text-lg rounded-lg hover:bg-sky-600 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
            <a href="mailto:info@cleancutservice.com" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-100 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Email Us
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom max-w-4xl">
        <h2 class="text-3xl font-display font-bold text-[#144787] text-center mb-10">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {faqs.map((faq) => (
            <details class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden group">
              <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50 transition-colors">
                <h3 class="text-lg font-semibold text-[#144787] pr-4">{faq.question}</h3>
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-600 leading-relaxed">{faq.answer}</div>
            </details>
          ))}
        </div>
      </div>
    </section>
    <FAQSchema faqs={faqs} />
  </main>

  <Footer />
  <FloatingCallButton />
</Layout>
