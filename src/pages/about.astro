---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import ProcessScrollCards from '../components/ProcessScrollCards.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://www.cleancutservice.com/' },
  { name: 'About Us', url: 'https://www.cleancutservice.com/about/' }
];

const coreValues = [
  {
    number: 1,
    title: "Deliver an Amazing Client Experience",
    description: "Every project is easy, rewarding, and enjoyable, with results that delight our clients."
  },
  {
    number: 2,
    title: "Everyone Wins",
    description: "Our team enjoys secure and fulfilling work, the business remains strong, and our clients receive first-class service."
  },
  {
    number: 3,
    title: "Vision Focused",
    description: "Every project is guided by solutions and a clear vision for the future of the company."
  },
  {
    number: 4,
    title: "Be Accountable",
    description: "We take responsibility for our work. Warranty commitments and transparent communication ensure satisfaction."
  },
  {
    number: 5,
    title: "Be Intense",
    description: "We bring focus, energy, and dedication to every project, striving for excellence in every detail."
  }
];

const faqs = [
  {
    "question": "Who owns Clean Cut Painting & Handyman?",
    "answer": "Clean Cut Painting & Handyman is owned and operated by Dara Mossman. Founded in 2016, the company is a woman-owned business proudly serving residential and commercial customers across Central Illinois."
  },
  {
    "question": "Is Clean Cut a licensed and insured company?",
    "answer": "Yes. Clean Cut Painting & Handyman is fully licensed, bonded, and insured. We are also BBB accredited since 2019, giving you peace of mind on every project."
  },
  {
    "question": "How long has Clean Cut been in business?",
    "answer": "Clean Cut has been serving Central Illinois since 2016. In that time we have completed thousands of residential and commercial projects across Decatur, Springfield, and surrounding communities."
  },
  {
    "question": "What areas does Clean Cut serve?",
    "answer": "We serve a 60-mile radius across Central Illinois, including Decatur, Springfield, Champaign-Urbana, Mount Zion, Forsyth, Chatham, Taylorville, Lincoln, Mattoon, Bloomington-Normal, and many more communities."
  },
  {
    "question": "What services does Clean Cut offer?",
    "answer": "We offer interior painting, exterior painting, cabinet refinishing, deck staining and restoration, power washing, handyman services, and commercial painting and maintenance."
  },
  {
    "question": "Does Clean Cut offer free estimates?",
    "answer": "Yes, we provide free, no-obligation estimates for all of our services. Contact us by phone at (217) 330-7310 or through our website to schedule yours."
  }
];
---

<Layout
  title="About Clean Cut Painting & Handyman | Family-Owned Business in Central Illinois"
  description="Learn about Clean Cut Painting & Handyman â€” a family-owned, woman-operated business serving Central Illinois since 2016 with expert painting services."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[400px] flex items-center overflow-hidden">
      <img
        src="/images/clean-cut-about.webp"
        alt="Clean Cut Painting & Handyman professional team serving Decatur Illinois and Central IL"
        class="absolute inset-0 w-full h-full object-cover"
       width="1280" height="854">
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            About Us
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium leading-relaxed">
            Quality Craftsmanship. Family Values. Lasting Results.
          </p>
        </div>
      </div>
    </section>

    <!-- Intro Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto text-center py-8">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            At Clean Cut Painting & Handyman
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            Great work starts with care, pride, and attention to detail. What began as a family-driven business has grown into a trusted name across Central Illinois. We are built on craftsmanship, integrity, and long-lasting relationships with our clients.
          </p>
        </div>
      </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_3.webp"
                  alt="Clean Cut Painting family-owned business story - serving Central Illinois since 2016"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Our Roots
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              Clean Cut is proudly rooted in Decatur, Illinois, serving homes and businesses throughout Central Illinois. Ken Clark founded Clean Cut Painting & Handyman in 2016, building a strong foundation centered on cleanliness, professionalism, quality workmanship and reliability.</p><p class="text-lg text-gray-600 leading-relaxed mt-4">After Ken's unexpected passing, it was deeply important to the Clark Family that his legacy continue. In early 2018, Dara and Colby Geiser stepped in to carry that vision forward, bringing with them over 30 years of combined industry experience and a commitment to honoring the standard Ken established.</p><p class="text-lg text-gray-600 leading-relaxed mt-4">Clean Cut Painting and Handyman's mission has always remained simple: Deliver reliable, high-quality work that clients can trust while preserving the legacy that started it all.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Family Driven Excellence Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="order-2 lg:order-1">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Family Driven Excellence
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              As a woman-owned and family operated business, family values guide everything we do. Dara and Colby work alongside a team of skilled professionals, many who have been with us since the beginning. That consistency shows in our work, communication, and pride in every project.
            </p>
          </div>
          <div class="order-1 lg:order-2 relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_2.webp"
                  alt="Family-driven painting excellence by Clean Cut in Springfield IL and surrounding areas"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Looking to the Future Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_1.webp"
                  alt="Clean Cut Painting & Handyman expanding services throughout Decatur and Macon County"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Looking to the Future
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              In 2024, we welcomed our son, Jack, into the business. With his involvement, we are expanding to a new Springfield location, allowing us to serve more homeowners while maintaining the same personal approach and quality work our clients expect.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Values - All 5 Visible -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="text-center mb-10">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-3">Our Core Values</h2>
          <p class="text-white/70 max-w-2xl mx-auto">Turning Your Vision into Reality</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4 max-w-7xl mx-auto">
          {coreValues.map((value) => (
            <article class="bg-white rounded-xl shadow-xl p-6 hover:transform hover:-translate-y-1 transition-all duration-300">
              <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-sky-400 to-sky-500 text-white flex items-center justify-center text-xl font-bold shadow-md mb-5">
                {value.number}
              </div>
              <h3 class="text-lg font-bold text-[#144787] mb-3 leading-snug">{value.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>


    <!-- Our Commitment to You -->
    <section class="py-16 relative">
      <img
        src="/images/commitment-bg.webp"
        alt="Clean Cut team at work"
        class="absolute inset-0 w-full h-full object-cover"
       width="1920" height="1280"/>
      <div class="absolute inset-0 bg-black/50"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-4xl mx-auto">
          <div class="bg-white/95 backdrop-blur-sm rounded-xl p-8 lg:p-12 shadow-2xl text-center">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Our Commitment to You
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              We do more than paint or complete repairs. We build trust. From your first call to the final walkthrough, we focus on clear communication, honest timelines, and dependable service. Clean Cut Painting &amp; Handyman is fully insured, and certificates are available on request. Safety and professionalism are at the core of everything we do.
            </p>
          </div>
        </div>
      </div>
    </section>
    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Space?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a free estimate for your painting or handyman project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button data-open-estimate class="px-8 py-4 bg-sky-500 text-white font-bold text-lg rounded-lg hover:bg-sky-600 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </button>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>

    
    <!-- Internal Links -->
    <section class="py-12 bg-white">
      <div class="container-custom">
        <h2 class="text-2xl font-display font-bold text-[#144787] text-center mb-8">Learn More About Clean Cut</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
          <a href="/our-process/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Our Process</h3>
            <p class="text-gray-500 text-sm">See how we deliver quality results on every project</p>
          </a>
          <a href="/who-we-are/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Meet the Team</h3>
            <p class="text-gray-500 text-sm">Get to know the people behind Clean Cut</p>
          </a>
          <a href="/our-work/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Our Work</h3>
            <p class="text-gray-500 text-sm">Browse our portfolio of completed projects</p>
          </a>
          <a href="/contact/" class="bg-gray-50 rounded-xl p-5 border border-gray-200 hover:border-sky-300 hover:shadow-md transition-all duration-300 group">
            <h3 class="text-base font-semibold text-[#144787] group-hover:text-sky-600 transition-colors mb-1">Contact Us</h3>
            <p class="text-gray-500 text-sm">Request your free estimate today</p>
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom max-w-4xl">
        <h2 class="text-3xl font-display font-bold text-[#144787] text-center mb-10">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {faqs.map((faq) => (
            <details class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden group">
              <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50 transition-colors">
                <h3 class="text-lg font-semibold text-[#144787] pr-4">{faq.question}</h3>
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-600 leading-relaxed">{faq.answer}</div>
            </details>
          ))}
        </div>
      </div>
    </section>
    <FAQSchema faqs={faqs} />
  </main>

  <Footer />
  <FloatingCallButton />
  <BreadcrumbSchema items={breadcrumbs} />
</Layout>
