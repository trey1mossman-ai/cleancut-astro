---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
---

<Layout
  title="About Clean Cut Painting & Handyman | Family-Owned Business in Central Illinois"
  description="Learn about Clean Cut Painting & Handyman - a family-owned, woman-operated business serving Central Illinois since 2018. Over 30 years of combined experience in professional painting and handyman services."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[500px] py-20 lg:py-24 overflow-hidden">
      <img
        src="/images/clean-cut-about.webp"
        alt="Clean Cut Painting & Handyman team at work"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            About Clean Cut: Crafting Excellence, Building Legacies
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium leading-relaxed">
            Where passion meets precision, and family values converge to transform spaces and exceed expectations.
          </p>
        </div>
      </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_1.webp"
                  alt="Clean Cut Painting & Handyman - Our Story"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Our Roots
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              Clean Cut Painting & Handyman is a family legacy rooted in Decatur, IL, proudly serving Central Illinois. With over 30 years of combined industry experience, we've been transforming homes and businesses since 2018 under the dedicated leadership of Dara and Colby Geiser.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Family-Driven Excellence Section -->
    <section class="py-16 bg-gray-200">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="order-2 lg:order-1">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Family-Driven Excellence
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              As a woman-owned and family-operated business, we take pride in our team. Many of our skilled professionals have been with us since the beginning, creating a culture of loyalty, expertise, and genuine care for every project we undertake.
            </p>
          </div>
          <div class="order-1 lg:order-2 relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_2.webp"
                  alt="Family-Driven Excellence at Clean Cut"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Looking to the Future Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="relative">
            <div class="relative rounded-lg shadow-xl overflow-hidden">
              <div class="relative aspect-[4/3]">
                <img
                  src="/images/Home Page/About Us/CC _ Home Page Photos_About Us_3.webp"
                  alt="Clean Cut Painting & Handyman - Looking to the Future"
                  width="600"
                  height="450"
                  class="w-full h-full object-cover"
                  loading="lazy"
                >
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Looking to the Future
            </h2>
            <p class="text-lg text-gray-600 leading-relaxed">
              2024 marks an exciting new chapter for Clean Cut. We're thrilled to welcome Jack Geiser to the team and announce our expansion with a new Springfield location. This growth reflects our commitment to serving even more families across Central Illinois.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Values Grid Section -->
    <section class="relative py-16 overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center center;">
      <div class="absolute inset-0 bg-[#144787]/90"></div>
      <div class="container-custom relative z-10">
        <div class="text-center mb-12 lg:mb-16">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-4">
            Our Core Values
          </h2>
          <p class="text-lg text-white/90 max-w-2xl mx-auto">
            These principles guide everything we do at Clean Cut
          </p>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Card 1 -->
          <div class="bg-white rounded-lg p-8 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="w-14 h-14 bg-sky-400 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold text-[#144787] mb-3">
              Our Commitment to You
            </h3>
            <p class="text-gray-600 leading-relaxed">
              We believe in building lasting relationships through transparency, trust, and open communication.
            </p>
          </div>

          <!-- Card 2 -->
          <div class="bg-white rounded-lg p-8 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="w-14 h-14 bg-sky-400 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold text-[#144787] mb-3">
              Fully Insured
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Your peace of mind matters. We maintain full insurance coverage with certificates available upon request.
            </p>
          </div>

          <!-- Card 3 -->
          <div class="bg-white rounded-lg p-8 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="w-14 h-14 bg-sky-400 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold text-[#144787] mb-3">
              Quality Craftsmanship
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Every brushstroke reflects our dedication to excellence and attention to detail.
            </p>
          </div>

          <!-- Card 4 -->
          <div class="bg-white rounded-lg p-8 shadow-xl hover:shadow-2xl transition-shadow duration-300">
            <div class="w-14 h-14 bg-sky-400 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold text-[#144787] mb-3">
              Customer Satisfaction
            </h3>
            <p class="text-gray-600 leading-relaxed">
              We're not finished until you're completely satisfied with our work.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-01.webp'); background-size: cover; background-position: center;">
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
            Ready to Transform Your Space?
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Let's bring your vision to life with our expert painting and handyman services
          </p>
          <a href="/contact" class="inline-block px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            Get Your Free Estimate
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
</Layout>
