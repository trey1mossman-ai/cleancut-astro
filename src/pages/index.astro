---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Services from '../components/Services.astro';
import Commercial from '../components/Commercial.astro';
import Promo from '../components/Promo.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import ContactForm from '../components/ContactForm.astro';
import GoogleReviews from '../components/GoogleReviews.astro';
import VideoTestimonials from '../components/VideoTestimonials.astro';
import Gallery from '../components/Gallery.astro';
import ServiceAreas from '../components/ServiceAreas.astro';
import CareersCTA from '../components/CareersCTA.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import FAQAccordion from '../components/FAQAccordion.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';

const faqs = [
  {
    question: "Do you offer free estimates?",
    answer: "Yes! We provide complimentary on-site estimates for all projects. Contact us to schedule yours today."
  },
  {
    question: "What areas do you serve?",
    answer: "We proudly serve Decatur, Springfield, and the surrounding Central Illinois communities within approximately 50 miles."
  },
  {
    question: "How do I get a quote?",
    answer: "Simply call us, fill out our contact form, or request an estimate online. We'll schedule a convenient time to assess your project."
  },
  {
    question: "Are your painters insured?",
    answer: "Yes, we're fully licensed and insured with comprehensive liability coverage and workers' compensation for your protection."
  },
  {
    question: "How long does a typical project take?",
    answer: "Project timelines vary based on scope. We provide detailed timelines in our proposals so you know what to expect."
  },
  {
    question: "Do you guarantee your work?",
    answer: "Absolutely! We stand behind our work with warranties and won't consider a job complete until you're 100% satisfied."
  }
];
---

<Layout title="Clean Cut Painting & Handyman | Professional Services in Decatur & Springfield IL">
  <Header />

  <main>
    <Hero />
    <About />
    <Services />
    <Commercial />
    <Promo />
    <WhyChooseUs />
    <ContactForm />
    <GoogleReviews />
    <Gallery />
    <VideoTestimonials />
    <ServiceAreas />
    <FAQAccordion faqs={faqs} title="Frequently Asked Questions" initialVisible={3} />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={[{ name: "Home", url: "https://www.cleancutservice.com/" }]} />
    <CareersCTA />
  </main>

  <Footer />
  <FloatingCallButton />
</Layout>
