---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import Lightbox from '../components/Lightbox.astro';
import ProcessScrollCards from '../components/ProcessScrollCards.astro';
import FAQWithImage from '../components/FAQWithImage.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import BreadcrumbSchema from '../components/schema/BreadcrumbSchema.astro';

const breadcrumbs = [
  { name: 'Home', url: 'https://cleancutservice.com/' },
  { name: 'Commercial Services', url: 'https://cleancutservice.com/commercial/' }
];

const faqs = [
  {
    question: "Do you work around business hours?",
    answer: "Absolutely! We offer flexible scheduling including evenings, weekends, and phased work to minimize disruption to your operations."
  },
  {
    question: "What types of commercial properties do you paint?",
    answer: "We handle offices, retail spaces, restaurants, warehouses, industrial facilities, and multi-unit buildings of all sizes."
  },
  {
    question: "Are you licensed and insured?",
    answer: "Yes, we're fully licensed and carry comprehensive liability insurance and workers' compensation for your protection."
  },
  {
    question: "Can you match our brand colors?",
    answer: "Yes! We use professional color matching to ensure your space reflects your brand identity perfectly."
  },
  {
    question: "How do you minimize business disruption?",
    answer: "We create detailed project plans, work in phases when needed, and maintain clean, safe work areas throughout the project."
  }
];

const processSteps = [
  {
    number: 1,
    title: "Initial Consultation",
    description: "We assess your space, understand your business needs, and develop a customized project plan that aligns with your timeline and budget requirements."
  },
  {
    number: 2,
    title: "Flexible Scheduling",
    description: "We coordinate work hours to minimize disruption to your operations, including after-hours and weekend options to keep your business running smoothly."
  },
  {
    number: 3,
    title: "Professional Execution",
    description: "Complete protection of your workspace, thorough surface preparation, and expert application by our trained, insured staff with minimal business impact."
  },
  {
    number: 4,
    title: "Quality Assurance",
    description: "Thorough inspection of all completed work, complete cleanup of the workspace, and detailed walkthrough to ensure every detail meets our standards."
  },
  {
    number: 5,
    title: "The Clean Cut Commitment",
    description: "Final sign-off with your complete satisfaction guaranteed. We maintain open communication and stand behind our work with comprehensive warranties."
  }
];
---

<Layout
  title="Commercial Services | Clean Cut Painting & Handyman"
  description="Professional commercial painting and renovation services in Decatur & Springfield IL. Flexible scheduling, minimal business disruption. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Commerical Services/CC _ Home Page Photos_Commercial Painting Services.webp"
        alt="Professional commercial painting services in Decatur IL and Central Illinois"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-black/70 via-black/60 to-black/50"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Commercial Services
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Elevate Your Business Environment
          </p>
        </div>
      </div>
    </section>

    <!-- Spaces Reflect Your Brand Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Spaces Reflect Your Brand And Business
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Our team collaborates with you to develop a comprehensive plan that aligns with your business goals while minimizing disruption to daily operations. From after-hours projects to weekend services, we deliver professional, efficient, and seamless results.
            </p>
          </div>
          <div>
            <img
              src="/images/services-optimized/commercial-projects/commercial-service-img-min.webp"
              alt="Commercial restaurant exterior painting in Decatur Illinois"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Clean Cut - Blue Tiles -->
    <section class="py-16 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-12">
          Why Choose Clean Cut
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-4xl mx-auto">
          <div class="bg-[#144787] rounded-xl p-6 text-white shadow-lg">
            <h3 class="text-lg font-bold mb-2">Business-Focused Solutions</h3>
            <p class="text-white/85 text-sm">We translate your objectives into tangible results that enhance your space</p>
          </div>
          <div class="bg-[#144787] rounded-xl p-6 text-white shadow-lg">
            <h3 class="text-lg font-bold mb-2">Flexible Scheduling</h3>
            <p class="text-white/85 text-sm">Our team works around your hours to ensure projects are completed without interrupting operations</p>
          </div>
          <div class="bg-[#144787] rounded-xl p-6 text-white shadow-lg">
            <h3 class="text-lg font-bold mb-2">Content & Wall Management</h3>
            <p class="text-white/85 text-sm">Decor and wall elements are carefully handled and reset for a polished, professional environment</p>
          </div>
          <div class="bg-[#144787] rounded-xl p-6 text-white shadow-lg">
            <h3 class="text-lg font-bold mb-2">Safety First</h3>
            <p class="text-white/85 text-sm">Our fully trained and insured staff prioritizes safety for your employees, clients, and property</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Transform Your Space + Commercial Services We Offer - Mirrored Sections -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <!-- Transform Your Space -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/commercial-projects/warehouse-paint-min.webp"
              alt="Industrial warehouse painting by professional commercial painters in Central IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Transform Your Space
            </h2>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              At Clean Cut, we exceed expectations with every project, turning your business environment into a professional, welcoming space. Schedule a consultation today and experience the Clean Cut difference in commercial services.
            </p>
            <button data-open-estimate class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Upgrade Your Space
            </button>
          </div>
        </div>

        <!-- Commercial Services We Offer -->
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Commercial Services We Offer
            </h2>
            <ul class="space-y-4 text-lg text-gray-600">
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Property Management Services:</strong> Tailored solutions for investment properties and portfolios</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Drop Ceiling Repair & Installation:</strong> Improve both functionality and aesthetics</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">Flooring Repair & Installation:</strong> Precision work for lasting results</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-sky-500 font-bold mt-1">•</span>
                <span><strong class="text-[#144787]">And Much More:</strong> A wide range of commercial projects handled with expertise</span>
              </li>
            </ul>
          </div>
          <div>
            <img
              src="/images/services-optimized/commercial-projects/Extensive-Commercial-min.webp"
              alt="Commercial storefront painting in Springfield IL"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process -->
    <!-- Process Section - Standalone -->
    <ProcessScrollCards steps={processSteps} />

    <!-- Gallery Section - 1 Long + 3 Under + CTA -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Commercial Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-12 max-w-2xl mx-auto">
          Explore our portfolio of completed commercial projects showcasing our expertise across various business environments.
        </p>

        <div class="max-w-5xl mx-auto">
          <!-- Featured Long Image -->
          <div class="mb-6">
            <div class="gallery-item group overflow-hidden rounded-xl shadow-2xl h-80 md:h-96">
              <img
                src="/images/Home Page/Recent Projects/CC _ Home Page Photos_Recent Work_Commerical Exterior.webp"
                alt="Featured commercial exterior painting transformation in Central Illinois"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                loading="lazy"
                data-lightbox-gallery="commercial-gallery"
              />
            </div>
          </div>

          <!-- 3 Images Grid Below -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="gallery-item group overflow-hidden rounded-lg shadow-lg h-64">
              <img
                src="/images/services-optimized/commercial-projects/Commercial-Services-3-min.webp"
                alt="Industrial building painting in Decatur IL"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
                data-lightbox-gallery="commercial-gallery"
              />
            </div>
            <div class="gallery-item group overflow-hidden rounded-lg shadow-lg h-64">
              <img
                src="/images/services-optimized/commercial-projects/553681598_18030208775725762_3952859797050168874_n.webp"
                alt="Commercial office interior painting in Springfield Illinois"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
                data-lightbox-gallery="commercial-gallery"
              />
            </div>
            <div class="gallery-item group overflow-hidden rounded-lg shadow-lg h-64">
              <img
                src="/images/services-optimized/commercial-projects/warehouse-paint-min.webp"
                alt="Warehouse painting project in Macon County IL"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
                data-lightbox-gallery="commercial-gallery"
              />
            </div>
          </div>

          <!-- Gallery CTA -->
          <div class="text-center">
            <a href="/our-work#commercial" class="inline-block px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              View Full Gallery
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section with Video -->
    <FAQWithImage
      faqs={faqs}
      title="Commercial Services FAQs"
      backgroundImage="/images/faq-backgrounds/commercial.webp"
      imageAlt="Commercial services by Clean Cut"
    />
    <FAQSchema faqs={faqs} />
    <BreadcrumbSchema items={breadcrumbs} />

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Business Space?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a complimentary proposal for your commercial project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button data-open-estimate class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
