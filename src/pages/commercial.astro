---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
import Lightbox from '../components/Lightbox.astro';
import ProcessScrollCards from '../components/ProcessScrollCards.astro';
import FAQAccordion from '../components/FAQAccordion.astro';

const faqs = [
  {
    question: "Do you work around business hours?",
    answer: "Absolutely! We offer flexible scheduling including evenings, weekends, and phased work to minimize disruption to your operations."
  },
  {
    question: "What types of commercial properties do you paint?",
    answer: "We handle offices, retail spaces, restaurants, warehouses, industrial facilities, and multi-unit buildings of all sizes."
  },
  {
    question: "Are you licensed and insured?",
    answer: "Yes, we're fully licensed and carry comprehensive liability insurance and workers' compensation for your protection."
  },
  {
    question: "Can you match our brand colors?",
    answer: "Yes! We use professional color matching to ensure your space reflects your brand identity perfectly."
  },
  {
    question: "How do you minimize business disruption?",
    answer: "We create detailed project plans, work in phases when needed, and maintain clean, safe work areas throughout the project."
  }
];

const processSteps = [
  {
    number: 1,
    title: "Initial Consultation",
    description: "We assess your space, understand your business needs, and develop a customized project plan that aligns with your timeline and budget requirements."
  },
  {
    number: 2,
    title: "Flexible Scheduling",
    description: "We coordinate work hours to minimize disruption to your operations, including after-hours and weekend options to keep your business running smoothly."
  },
  {
    number: 3,
    title: "Professional Execution",
    description: "Complete protection of your workspace, thorough surface preparation, and expert application by our trained, insured staff with minimal business impact."
  },
  {
    number: 4,
    title: "Quality Assurance",
    description: "Thorough inspection of all completed work, complete cleanup of the workspace, and detailed walkthrough to ensure every detail meets our standards."
  },
  {
    number: 5,
    title: "The Clean Cut Commitment",
    description: "Final sign-off with your complete satisfaction guaranteed. We maintain open communication and stand behind our work with comprehensive warranties."
  }
];
---

<Layout
  title="Commercial Painting Services | Clean Cut Painting & Handyman"
  description="Professional commercial painting and renovation services in Decatur & Springfield IL. Flexible scheduling, minimal business disruption. Free estimates!"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[350px] flex items-center overflow-hidden">
      <img
        src="/images/Home Page/Commerical Services/CC _ Home Page Photos_Commercial Painting Services.webp"
        alt="Professional commercial painting services"
        class="absolute inset-0 w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-br from-[#144787]/85 via-[#144787]/75 to-[#144787]/65 lg:from-black/70 lg:via-black/60 lg:to-black/50 backdrop-blur-md lg:backdrop-blur-none"></div>
      <div class="container-custom relative z-10 py-20 lg:py-24">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-display font-bold mb-6 drop-shadow-lg">
            Commercial Painting Services
          </h1>
          <p class="text-lg sm:text-xl lg:text-2xl text-white/95 font-medium max-w-3xl mx-auto">
            Elevate your business environment with professional commercial services. We work with minimal disruption through flexible scheduling.
          </p>
        </div>
      </div>
    </section>

    <!-- Services Overview Section -->
    <section class="py-16 bg-gray-50/50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Comprehensive Commercial Services
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          From interior painting to complete office renovations, we handle every project with professionalism
        </p>

        <!-- Image Grid Showcase -->
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-12 max-w-6xl mx-auto">
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/commercial-service-img-min.webp"
              alt="Commercial restaurant exterior painting - Subway storefront"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Restaurant Exteriors</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/Extensive-Commercial-min.webp"
              alt="Commercial storefront painting - Nails Escape modern exterior"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Retail Storefronts</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/warehouse-paint-min.webp"
              alt="Industrial warehouse painting - blue and white exterior"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Industrial Facilities</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/Commercial-Services-3-min.webp"
              alt="Commercial industrial building painting - Decatur Bolt"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Industrial Buildings</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/553681598_18030208775725762_3952859797050168874_n.webp"
              alt="Commercial office interior painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Office Interiors</p>
            </div>
          </div>
          <div class="relative h-64 overflow-hidden rounded-lg shadow-lg group">
            <img
              src="/images/services-optimized/commercial-projects/april-10.webp"
              alt="Commercial building renovation project"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              data-lightbox-gallery="commercial-services"
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 pointer-events-none">
              <p class="text-white font-semibold">Office Renovations</p>
            </div>
          </div>
        </div>

        <!-- View Gallery CTA -->
        <div class="text-center">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Full-Width Visual Break -->
    <section class="relative h-96 overflow-hidden">
      <img
        src="/images/services-optimized/commercial-projects/Extensive-Commercial-min.webp"
        alt="Commercial storefront painting - modern retail exterior"
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
      />
    </section>

    <!-- Feature Section -->
    <section class="py-16 bg-white">
      <div class="container-custom">
        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto mb-20">
          <div class="order-2 lg:order-1">
            <img
              src="/images/services-optimized/commercial-projects/warehouse-paint-min.webp"
              alt="Industrial warehouse painting - professional commercial services"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Business-Centric Approach
            </h2>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              Your commercial space reflects your brand identity. Our team understands the importance of minimal business disruption and works around your schedule.
            </p>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              We offer flexible scheduling including after-hours and weekend work options. Our trained, insured staff prioritizes workplace safety and professional handling of all decorative elements.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
        </div>

        <div class="grid lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold text-[#144787] mb-6">
              Scalable Commercial Solutions
            </h2>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              From small retail spaces to large industrial facilities, we have the expertise and resources to handle projects of any scale efficiently.
            </p>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              Our commercial team is equipped with the latest tools and techniques to deliver exceptional results while maintaining strict safety standards and project timelines.
            </p>
            <a href="/contact" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
          </div>
          <div>
            <img
              src="/images/services-optimized/commercial-projects/Commercial-Services-3-min.webp"
              alt="Commercial industrial building - Decatur Bolt exterior"
              class="rounded-lg shadow-2xl w-full h-auto"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section - Standalone -->
    <ProcessScrollCards steps={processSteps} />

    <!-- FAQ Section -->
    <FAQAccordion faqs={faqs} title="Commercial Services FAQs" initialVisible={3} />

    <!-- Gallery Section -->
    <section class="py-20 bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-[#144787] mb-6">
          Our Commercial Projects
        </h2>
        <p class="text-lg text-gray-600 text-center mb-16 max-w-2xl mx-auto">
          Explore our portfolio of completed commercial projects showcasing our expertise across various business environments.
        </p>

        <!-- Featured Large Image -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group h-96">
            <img
              src="/images/services-optimized/commercial-projects/Commercial-Services-3-min.webp"
              alt="Decatur Bolt industrial building - professional commercial painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
        </div>

        <!-- Grid Gallery -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/commercial-projects/commercial-service-img-min.webp"
              alt="Commercial restaurant exterior - Subway storefront painting"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/services-optimized/commercial-projects/2-3.webp"
              alt="Industrial storage tanks painting project"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
          <div class="gallery-item group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 h-72">
            <img
              src="/images/Home Page/Recent Projects/CC _ Home Page Photos_Recent Work_Commerical Exterior.webp"
              alt="Commercial exterior painting transformation"
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
              data-lightbox-gallery="commercial-gallery"
            />
          </div>
        </div>

        <!-- View Full Gallery CTA -->
        <div class="text-center mt-12">
          <a href="/our-work" class="inline-block px-8 py-3.5 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 relative bg-[#144787]">
      <div class="absolute inset-0 opacity-20" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover;"></div>
      <div class="container-custom relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-white mb-6">
            Ready to Transform Your Business Space?
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Get a complimentary proposal for your commercial project today
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Get a Complimentary Proposal
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-white text-[#144787] font-bold text-lg rounded-lg hover:bg-gray-200 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
  <Lightbox />
</Layout>
