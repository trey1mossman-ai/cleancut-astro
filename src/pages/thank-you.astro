---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingCallButton from '../components/FloatingCallButton.astro';
---

<Layout
  title="Thank You | Clean Cut Painting & Handyman"
  description="Thank you for contacting Clean Cut Painting & Handyman. We'll be in touch within 24 hours."
>
  <Header />

  <main>
    <!-- Thank You Section -->
    <section class="min-h-[70vh] flex items-center py-20 bg-gray-50">
      <div class="container-custom">
        <div class="max-w-2xl mx-auto text-center">
          <!-- Success Icon -->
          <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>

          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold text-[#144787] mb-6">
            Thank You!
          </h1>

          <p class="text-lg sm:text-xl text-gray-600 mb-8">
            We've received your request and will contact you within 24 hours to schedule your free estimate.
          </p>

          <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
            <h2 class="text-xl font-semibold text-[#144787] mb-4">What Happens Next?</h2>
            <div class="space-y-4 text-left">
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-sky-600 font-bold text-sm">1</span>
                </div>
                <p class="text-gray-600">Our team will review your request and reach out within 24 hours.</p>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-sky-600 font-bold text-sm">2</span>
                </div>
                <p class="text-gray-600">We'll schedule a convenient time for your free on-site evaluation.</p>
              </div>
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <span class="text-sky-600 font-bold text-sm">3</span>
                </div>
                <p class="text-gray-600">You'll receive a detailed, no-obligation estimate for your project.</p>
              </div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/" class="px-8 py-4 bg-[#144787] text-white font-bold text-lg rounded-lg hover:bg-[#1a5299] transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Back to Home
            </a>
            <a href="tel:+12173307310" class="px-8 py-4 bg-sky-400 text-white font-bold text-lg rounded-lg hover:bg-sky-500 transform hover:-translate-y-0.5 transition-all duration-300 shadow-xl">
              Call (217) 330-7310
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingCallButton />
</Layout>
