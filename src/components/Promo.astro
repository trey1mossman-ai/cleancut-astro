---
// Promo section component for Clean Cut Painting & Handyman
---

<section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-05.webp'); background-size: cover; background-position: center;">
  <div class="container-custom relative z-10">
    <div class="bg-white rounded-xl p-8 shadow-2xl border-4 border-[#144787]">
      <div class="text-center text-[#144787]">
        <div class="inline-flex items-center gap-2 bg-red-600 text-white px-5 py-2.5 rounded-full mb-6 shadow-lg">
          <span class="font-bold text-sm tracking-wide">LIMITED TIME OFFER</span>
        </div>
        <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">Love the Way Your Home Looks</h2>
        <div class="grid md:grid-cols-3 gap-6 mb-8 max-w-4xl mx-auto">
          <div class="bg-sky-50 rounded-lg p-6 border-2 border-sky-400">
            <h3 class="font-bold text-xl mb-2 text-[#144787] text-center">15% OFF</h3>
            <p class="text-gray-700 text-center">Interior painting projects under $5,000</p>
          </div>
          <div class="bg-sky-50 rounded-lg p-6 border-2 border-sky-400">
            <h3 class="font-bold text-xl mb-2 text-[#144787] text-center">$1,250 OFF</h3>
            <p class="text-gray-700 text-center">Interior painting projects over $5,000</p>
          </div>
          <div class="bg-sky-50 rounded-lg p-6 border-2 border-sky-400">
            <h3 class="font-bold text-xl mb-2 text-[#144787] text-center">Book by Feb 28</h3>
            <p class="text-gray-700 text-center">For February or March project dates</p>
          </div>
        </div>
        <p class="text-xl md:text-2xl font-bold text-[#144787] mb-3">Ready to Claim Your Discount?</p>
        <p class="text-lg text-gray-600 mb-6">Get your free quote now and we'll automatically apply the savings!</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button id="open-promo-form" class="inline-flex items-center gap-2 px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-all shadow-xl">
            <span>Claim My Discount Now</span>
          </button>
          <div class="text-gray-600">
            <span class="block text-sm">Or Call Now</span>
            <a href="tel:+12173307310" class="text-lg font-semibold text-[#144787] hover:text-primary">(217) 330-7310</a>
          </div>
        </div>
        <p class="mt-6 text-sm text-gray-500">*Terms and conditions apply. Offer valid for interior painting projects. Must be booked by February 28 for February or March project dates.</p>
      </div>
    </div>
  </div>
</section>

<!-- Popup Form Modal -->
<div id="promo-modal" class="fixed inset-0 z-50 hidden">
  <!-- Backdrop -->
  <div id="promo-backdrop" class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  <!-- Modal Content -->
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div id="promo-form-container" class="relative bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95 opacity-0">
      <!-- Close Button -->
      <button id="close-promo-form" class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center rounded-full bg-gray-100 hover:bg-gray-200 transition-colors z-10">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>

      <!-- Form Header -->
      <div class="bg-[#144787] text-white px-6 py-5 rounded-t-2xl">
        <div class="inline-flex items-center gap-2 bg-red-600 text-white px-3 py-1 rounded-full text-xs font-bold mb-2">
          LIMITED TIME
        </div>
        <h3 class="text-xl font-bold">Claim Your Spring Discount</h3>
        <p class="text-white/80 text-sm mt-1">Fill out the form below for your free quote</p>
      </div>

      <!-- Form Body -->
      <form id="promo-form" class="p-6 space-y-4">
        <!-- Name -->
        <div>
          <label for="promo-name" class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
          <input
            type="text"
            id="promo-name"
            name="name"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="John Smith"
          />
        </div>

        <!-- Email -->
        <div>
          <label for="promo-email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
          <input
            type="email"
            id="promo-email"
            name="email"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="john@example.com"
          />
        </div>

        <!-- Phone -->
        <div>
          <label for="promo-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
          <input
            type="tel"
            id="promo-phone"
            name="phone"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="(217) 555-1234"
          />
        </div>

        <!-- Project Type -->
        <div>
          <label for="promo-project" class="block text-sm font-medium text-gray-700 mb-1">Project Type *</label>
          <select
            id="promo-project"
            name="project"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all bg-white"
          >
            <option value="">Select a service...</option>
            <option value="exterior-painting">Exterior Painting</option>
            <option value="interior-painting">Interior Painting</option>
            <option value="deck-staining">Deck Staining</option>
            <option value="cabinet-refinishing">Cabinet Refinishing</option>
            <option value="power-washing">Power Washing</option>
            <option value="handyman">Handyman Services</option>
            <option value="multiple">Multiple Services</option>
          </select>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors shadow-lg flex items-center justify-center gap-2"
        >
          <span>Get My Free Quote</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </button>

        <p class="text-xs text-gray-500 text-center">Your discount will be automatically applied to your quote.</p>
      </form>

      <!-- Success Message (hidden by default) -->
      <div id="promo-success" class="hidden p-8 text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-[#144787] mb-2">Thank You!</h3>
        <p class="text-gray-600 mb-4">We've received your request and will contact you within 24 hours with your discounted quote.</p>
        <button id="close-success" class="px-6 py-2 bg-[#144787] text-white font-semibold rounded-lg hover:bg-[#2a4a6f] transition-colors">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('promo-modal');
  const backdrop = document.getElementById('promo-backdrop');
  const formContainer = document.getElementById('promo-form-container');
  const openBtn = document.getElementById('open-promo-form');
  const closeBtn = document.getElementById('close-promo-form');
  const form = document.getElementById('promo-form') as HTMLFormElement;
  const successMessage = document.getElementById('promo-success');
  const closeSuccessBtn = document.getElementById('close-success');

  function openModal() {
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    // Trigger animation
    setTimeout(() => {
      formContainer?.classList.remove('scale-95', 'opacity-0');
      formContainer?.classList.add('scale-100', 'opacity-100');
    }, 10);
  }

  function closeModal() {
    formContainer?.classList.remove('scale-100', 'opacity-100');
    formContainer?.classList.add('scale-95', 'opacity-0');
    setTimeout(() => {
      modal?.classList.add('hidden');
      document.body.style.overflow = '';
      // Reset form and show form again (hide success)
      form?.reset();
      form?.classList.remove('hidden');
      successMessage?.classList.add('hidden');
    }, 300);
  }

  // Open modal
  openBtn?.addEventListener('click', openModal);

  // Close modal
  closeBtn?.addEventListener('click', closeModal);
  closeSuccessBtn?.addEventListener('click', closeModal);

  // Close on backdrop click
  backdrop?.addEventListener('click', closeModal);

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Form submission
  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Here you would typically send the form data to your backend
    // For now, just show success message
    form.classList.add('hidden');
    successMessage?.classList.remove('hidden');
  });
</script>
