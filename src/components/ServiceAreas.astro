<style>
  /* Hide default browser marker/arrow */
  details summary {
    list-style: none;
  }
  details summary::-webkit-details-marker {
    display: none;
  }
  details summary::marker {
    display: none;
    content: '';
  }
  
  /* Toggle show/hide text based on open state */
  details .hide-text {
    display: none;
  }
  details .show-text {
    display: inline;
  }
  
  details[open] .hide-text {
    display: inline;
  }
  details[open] .show-text {
    display: none;
  }
  
  /* Rotate chevron when open */
  details .chevron-icon {
    transition: transform 0.3s ease;
  }
  details[open] .chevron-icon {
    transform: rotate(180deg);
  }
</style>
