---
// EstimateModal - Global popup form triggered by data-open-estimate buttons
// Referenced from Layout.astro, available on all pages
---

<!-- Estimate Modal -->
<div id="estimate-modal" class="fixed inset-0 z-50 hidden">
  <!-- Backdrop -->
  <div id="estimate-backdrop" class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  <!-- Modal Content -->
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <div id="estimate-form-container" class="relative bg-white rounded-2xl shadow-2xl w-full max-w-md transform transition-all duration-300 scale-95 opacity-0">
      <!-- Close Button -->
      <button id="close-estimate-form" class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 transition-colors z-10">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>

      <!-- Form Header -->
      <div class="bg-[#144787] text-white px-6 py-5 rounded-t-2xl">
        <h3 class="text-xl font-bold">Get Your Free Estimate</h3>
        <p class="text-white/80 text-sm mt-1">Complimentary on-site evaluation &bull; 24hr response</p>
      </div>

      <!-- Form Body -->
      <form id="estimate-form" class="p-6 space-y-4">
        <div>
          <label for="estimate-name" class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
          <input
            type="text"
            id="estimate-name"
            name="name"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="John Smith"
          />
        </div>

        <div>
          <label for="estimate-email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
          <input
            type="email"
            id="estimate-email"
            name="email"
            required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="john@example.com"
          />
        </div>

        <div>
          <label for="estimate-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
          <input
            type="tel"
            id="estimate-phone"
            name="phone"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all"
            placeholder="(217) 555-1234"
          />
        </div>

        <div>
          <label for="estimate-service" class="block text-sm font-medium text-gray-700 mb-1">Service Interested In</label>
          <select
            id="estimate-service"
            name="service"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-400 focus:border-sky-400 outline-none transition-all bg-white"
          >
            <option value="">Select a service...</option>
            <option value="interior-painting">Interior Painting</option>
            <option value="exterior-painting">Exterior Painting</option>
            <option value="cabinet-refinishing">Cabinet Refinishing</option>
            <option value="deck-staining">Deck Staining</option>
            <option value="power-washing">Power Washing</option>
            <option value="handyman">Handyman Services</option>
            <option value="commercial">Commercial Services</option>
            <option value="multiple">Multiple Services</option>
          </select>
        </div>

        <button
          type="submit"
          class="w-full py-3 bg-sky-400 text-white font-semibold rounded-lg hover:bg-sky-500 transition-colors shadow-lg flex items-center justify-center gap-2"
        >
          <span>Get My Free Estimate</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </button>

        <p class="text-xs text-gray-500 text-center">We'll respond within 24 hours to schedule your free on-site evaluation.</p>
      </form>

      <!-- Success Message -->
      <div id="estimate-success" class="hidden p-8 text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-[#144787] mb-2">Thank You!</h3>
        <p class="text-gray-600 mb-4">We've received your request and will contact you within 24 hours to schedule your free estimate.</p>
        <button id="close-estimate-success" class="px-6 py-2 bg-[#144787] text-white font-semibold rounded-lg hover:bg-[#1a5299] transition-colors">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const estimateModal = document.getElementById('estimate-modal');
  const estimateBackdrop = document.getElementById('estimate-backdrop');
  const estimateFormContainer = document.getElementById('estimate-form-container');
  const closeEstimateBtn = document.getElementById('close-estimate-form');
  const estimateForm = document.getElementById('estimate-form') as HTMLFormElement;
  const estimateSuccess = document.getElementById('estimate-success');
  const closeEstimateSuccessBtn = document.getElementById('close-estimate-success');

  function openEstimateModal() {
    estimateModal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    setTimeout(() => {
      estimateFormContainer?.classList.remove('scale-95', 'opacity-0');
      estimateFormContainer?.classList.add('scale-100', 'opacity-100');
    }, 10);
  }

  function closeEstimateModal() {
    estimateFormContainer?.classList.remove('scale-100', 'opacity-100');
    estimateFormContainer?.classList.add('scale-95', 'opacity-0');
    setTimeout(() => {
      estimateModal?.classList.add('hidden');
      document.body.style.overflow = '';
      estimateForm?.reset();
      estimateForm?.classList.remove('hidden');
      estimateSuccess?.classList.add('hidden');
    }, 300);
  }

  // Listen for all [data-open-estimate] buttons on the page
  document.querySelectorAll('[data-open-estimate]').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      openEstimateModal();
    });
  });

  closeEstimateBtn?.addEventListener('click', closeEstimateModal);
  closeEstimateSuccessBtn?.addEventListener('click', closeEstimateModal);
  estimateBackdrop?.addEventListener('click', closeEstimateModal);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !estimateModal?.classList.contains('hidden')) {
      closeEstimateModal();
    }
  });

  estimateForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    estimateForm.classList.add('hidden');
    estimateSuccess?.classList.remove('hidden');
  });
</script>
