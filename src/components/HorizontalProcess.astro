---
interface Step {
  number: number;
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
  title?: string;
}

const { steps, title = "Our Process in a Snapshot" } = Astro.props;
---

<section class="py-16 relative overflow-hidden" style="background-image: url('/patterns/pattern-04.webp'); background-size: cover; background-position: center;">
  <div class="absolute inset-0 bg-[#144787]/90"></div>
  <div class="container-custom relative z-10">
    <h2 class="text-3xl lg:text-4xl font-display font-bold text-center text-white mb-12">
      {title}
    </h2>
    
    <!-- Horizontal scrolling container -->
    <div class="overflow-x-auto pb-4 -mx-4 px-4 md:overflow-visible md:mx-0 md:px-0">
      <div class="flex gap-0 min-w-max md:min-w-0 md:justify-center md:max-w-5xl md:mx-auto">
        {steps.map((step, index) => (
          <div class="flex items-center">
            <!-- Step circle and content -->
            <div class="flex flex-col items-center w-40 md:w-48 shrink-0">
              <div class="w-16 h-16 md:w-20 md:h-20 rounded-full bg-sky-400 text-white flex items-center justify-center text-2xl md:text-3xl font-bold shadow-lg">
                {step.number}
              </div>
              <h3 class="text-lg md:text-xl font-bold text-white mt-4 mb-2 text-center">
                {step.title}
              </h3>
              <p class="text-white/80 text-sm md:text-base text-center px-2">
                {step.description}
              </p>
            </div>
            
            {index < steps.length - 1 && (
              <div class="w-8 md:w-12 h-1 bg-sky-400/60 self-start mt-8 md:mt-10 shrink-0"></div>
            )}
          </div>
        ))}
      </div>
    </div>
    
    <p class="text-white/60 text-sm text-center mt-4 md:hidden">
      Swipe to see all steps
    </p>
  </div>
</section>
