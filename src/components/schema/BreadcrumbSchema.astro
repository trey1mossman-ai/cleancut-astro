---
/**
 * BreadcrumbSchema.astro
 * Generates JSON-LD structured data for BreadcrumbList schema
 * ALL data comes from props - NO hardcoded paths
 */

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Only generate schema if there are breadcrumb items
const schema = items && items.length > 0 ? {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: items.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.name,
    item: item.url
  }))
} : null;
---

{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(schema, null, 2)} />
)}
