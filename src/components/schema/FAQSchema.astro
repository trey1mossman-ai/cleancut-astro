---
/**
 * FAQSchema.astro
 * Generates JSON-LD structured data for FAQPage schema
 * ALL data comes from props - NO hardcoded questions/answers
 */

interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;

// Only generate schema if there are FAQs
const schema = faqs && faqs.length > 0 ? {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map(faq => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer
    }
  }))
} : null;
---

{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(schema, null, 2)} />
)}
